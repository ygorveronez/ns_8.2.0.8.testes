
<section id="widget-grid">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Pedidos</li>
        <li class="breadcrumb-item active">Atendimento Pedidos</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            <i class="subheader-icon fal fa-user"></i> Atendimento Pedidos
        </h1>
    </div>

    <div id="knockoutPesquisaAtendimentoPedido" class="panel">
        <div class="panel-container">
            <div id="container-pesquisa-pedidos" class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Atendimentos
                </button>
                <div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form class="mt-3">
                        <div class="row">
                            <div class="col-12 col-lg-3" data-bind="visible: DataInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicial.text, attr: { for: DataInicial.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataInicial.val, attr: { maxlength: DataInicial.maxlength, id : DataInicial.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-3" data-bind="visible: DataFinal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataFinal.text, attr: { for: DataFinal.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataFinal.val, attr: { maxlength: DataFinal.maxlength, id : DataFinal.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-3" data-bind="visible: NumeroPedido.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroPedido.text, attr: { for: NumeroPedido.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NumeroPedido.val, attr: { maxlength: NumeroPedido.maxlength, id : NumeroPedido.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-12 col-lg-2" data-bind="visible: PedidosComChat.visible" style="margin-top: 38px">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" data-bind="checked: PedidosComChat.val, attr: { maxlength: PedidosComChat.maxlength, name: PedidosComChat.id, id: PedidosComChat.id }" />
                                        <label class="custom-control-label" data-bind="text: PedidosComChat.text, attr: { for: PedidosComChat.id }"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6" data-bind="visible: Remetente.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Remetente.text, attr: { for: Remetente.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="value: Remetente.val, valueUpdate: 'afterkeydown', attr: { maxlength: Remetente.maxlength, id : Remetente.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button" data-bind="attr: { id: Remetente.idBtnSearch}">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-3" data-bind="visible: NotaFiscal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NotaFiscal.text, attr: { for: NotaFiscal.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NotaFiscal.val, valueUpdate: 'afterkeydown', attr: { maxlength: NotaFiscal.maxlength, id : NotaFiscal.id}" />
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-success" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                            <i class="fal fa-search"></i> <span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <div id="knoutAtendimentoPedido">
                    <!-- ko foreach: { data: Pedidos.val, as: 'Card' } -->
                    <!-- ko component: {name: "pedido-card-container", params: Card} -->
                    <!-- /ko -->
                    <!-- /ko -->
                </div>
                <div id="divPaginationAtendimentoPedido"></div>
            </div>
        </div>
    </div>
</section>

<script id="pedido-card-container" type="text/html">
    <div class="pedido-card" data-bind="attr: { id : $data.Codigo}">
        <div class="row">
            <div class="col-12 col-xl-1 icone">
                <i class="fal fa-file icone-pedido" aria-hidden="true"></i>
            </div>
            <div class="col-12 col-xl-1 icone chamado">
                <a data-bind="click: abrirChatAtendimento.bind($data)">
                    <img src="Content/portal-cliente/public/novo-chamado.png" />
                </a>
            </div>
            <div class="col-12 col-xl-10">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <b>Pedido:</b>
                            </td>
                            <td>
                                <span data-bind="text: NumeroPedido"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Remetente:</b>
                            </td>
                            <td>
                                <span data-bind="text: Remetente"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Notas:</b>
                            </td>
                            <td>
                                <span data-bind="text: NotasFiscais"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Cliente:</b>
                            </td>
                            <td>
                                <span data-bind="text: Destinatario"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <b>Destino:</b>
                            </td>
                            <td>
                                <span data-bind="text: Destino"></span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-12 botao-finalizar">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" type="button" data-bind="visible: $data.PossuiChatAtivo, click: finalizarAtendimento.bind($data)">
                        <i class="fal fa-flag-checkered"></i> Finalizar Atendimento
                    </button>
                </div>
            </div>
            <div class="col-12 pedido-data">
                <span data-bind="text: DataCriacao"></span>
            </div>
        </div>
    </div>
</script>

<div class="modal fade" id="divModalChat" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Chat Atendimento</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div id="knoutChatAtendimentoPedido">
                    <div class="chat">
                        <div data-bind="visible: Mensagem.visible" class="mt-2">
                            <div data-bind="attr: { id: Mensagem.id }" style="height:677px; overflow-y:scroll"></div>
                        </div>
                        <div class="msgchat">
                            <textarea placeholder="Digite sua mensagem" id="Mensagem" style="resize: none;" rows="1" type="text" data-bind="visible: Mensagem.visible, value: Mensagem.val, valueUpdate: 'afterkeydown', attr: { maxlength: Mensagem.maxlength}"></textarea>
                            <div class="ms-1" data-bind="visible: Mensagem.visible">
                                <a data-bind="click: EnviarMensagem.eventClick, attr: { id: EnviarMensagem.id}" style="cursor:pointer"> <img src="Content/portal-cliente/public/EnvioMsg.svg" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

