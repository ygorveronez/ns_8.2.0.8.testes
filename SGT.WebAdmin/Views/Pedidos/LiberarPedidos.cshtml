
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pedidos</li>
    <li class="breadcrumb-item active">Liberar Pedidos</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Liberar Pedidos
    </h1>
</div>

<div id="knockoutPesquisaLiberarPedidos">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Pedidos
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-6" data-bind="visible: Filial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Filial.text, attr: { for: Filial.id }"></label>
                                    <div class="input-group">
                                        <input type="text" data-bind="css: Filial.requiredClass, value: Filial.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': Filial.text, maxlength: Filial.maxlength, id: Filial.id, name: Filial.id }" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: Filial.idBtnSearch}">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Hora.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Hora.text, attr: { for: Hora.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: Hora.requiredClass, value: Hora.val, valueUpdate: 'afterkeydown', attr: { maxlength: Hora.maxlength, id : Hora.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Liberado.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Liberado.text"></label>
                                    <select class="form-control" data-bind="options: Liberado.options, optionsText: 'text', optionsValue: 'value', value: Liberado.val, attr: { id : Liberado.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    
                    <div class="d-flex align-items-center justify-content-end mb-3" data-bind="visible: LiberarTodosPedidos.visible">
                        <button class="btn btn-primary waves-effect waves-themed btnLiberarTodosPedidosFiltroPesquisa" data-bind="click: LiberarTodosPedidos.eventClick, attr: { id: LiberarTodosPedidos.id}, visible: LiberarTodosPedidos.visible" type="button">
                            <i class="fal fa-alarm-plus"></i><span data-bind="text: LiberarTodosPedidos.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

