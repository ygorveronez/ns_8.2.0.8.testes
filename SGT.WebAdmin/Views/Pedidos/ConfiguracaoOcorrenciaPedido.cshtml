
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pedidos</li>
    <li class="breadcrumb-item active">Configuração Ocorrência Pedido</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Configuração Ocorrência Pedido
    </h1>
</div>

<div id="knockoutPesquisaConfiguracaoOcorrenciaPedido">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-secondary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-filter"></i>
                    Pesquisar Configurações
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-3" data-bind="visible: EventoColetaPedido.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: EventoColetaPedido.text"></label>
                                    <select class="form-control" data-bind="options: EventoColetaPedido.options, optionsText: 'text', optionsValue: 'value', value: EventoColetaPedido.val, attr: { id : EventoColetaPedido.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-9" data-bind="visible: TipoOcorrencia.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoOcorrencia.text, attr: { for: TipoOcorrencia.id }"></label>
                                    <div class="input-group">
                                        <input type="text" data-bind="css: TipoOcorrencia.requiredClass, value: TipoOcorrencia.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': TipoOcorrencia.text, maxlength: TipoOcorrencia.maxlength, id: TipoOcorrencia.id, name: TipoOcorrencia.id }" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: TipoOcorrencia.idBtnSearch}">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Configuração de Ocorrência
            </h3>
        </div>
        <div class="panel-content">
            <form id="knockoutConfiguracaoOcorrenciaPedido">
                <div class="row">
                    <div class="col-12 col-md-3" data-bind="visible: EventoColetaPedido.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: EventoColetaPedido.text, attr: { for: EventoColetaPedido.id }"></label>
                            <select class="form-control" data-bind="class: EventoColetaPedido.requiredClass, options: EventoColetaPedido.options, optionsText: 'text', optionsValue: 'value', value: EventoColetaPedido.val, attr: { maxlength: EventoColetaPedido.maxlength, id : EventoColetaPedido.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-8" data-bind="visible: TipoOcorrencia.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: TipoOcorrencia.text, attr: { for: TipoOcorrencia.id }"></label>
                            <div class="input-group">
                                <input type="text" data-bind="css: TipoOcorrencia.requiredClass, value: TipoOcorrencia.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': TipoOcorrencia.text, maxlength: TipoOcorrencia.maxlength, id: TipoOcorrencia.id, name: TipoOcorrencia.id }" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: TipoOcorrencia.idBtnSearch}">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                                <i class="fal fa-ban"></i>
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger me-2" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                                <i class="fal fa-trash"></i>
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                                <i class="fal fa-check"></i>
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/configuracaoOcorrenciaPedido"></script>

<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadConfiguracaoOcorrenciaPedido();
    });

</script>

