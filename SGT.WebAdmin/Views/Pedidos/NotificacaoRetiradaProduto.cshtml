
<section id="widget-grid">
	<ol class="breadcrumb page-breadcrumb">
		<li class="breadcrumb-item">Pedidos</li>
		<li class="breadcrumb-item active">Notificação Retirada Produto</li>
	</ol>
	<div class="subheader">
		<h1 class="subheader-title">
			<i class="subheader-icon fal fa-file"></i> Notificação de Retirada de Produto
		</h1>
	</div>
	<div id="knockoutPesquisaNotificacaoRetiradaProduto" class="panel">
		<div class="panel-container">
			<div class="panel-content">
				<button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
					<i class="fal fa-search"></i>
					Pesquisar Notificação de Retirada de Produto
				</button>
				<div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
					<form class="mt-3">
						<div class="row">
							<div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
								<div class="form-group">
									<label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
									<input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
								</div>
							</div>
							<div class="col-12 col-md-3" data-bind="visible: Situacao.visible">
								<div class="form-group">
									<label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
									<select class="form-control" data-bind="options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { id : Situacao.id}"></select>
								</div>
							</div>
						</div>
					</form>
					<div class="d-flex justify-content-end my-3">
						<button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
							<i class="fal fa-search"></i> <span data-bind="text: Pesquisar.text"></span>
						</button>
					</div>
					<table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
				</div>
			</div>
		</div>
	</div>
	<div class="panel">
		<div class="panel-container">
			<div class="panel-hdr">
				<h3>
					<i class="fal fa-edit"></i>
					Cadastrar Notificação
				</h3>
			</div>
			<div class="panel-content">
				<form>
					<div class="row">
						<div class="col-6" id="knockoutCadastroNotificacaoRetiradaProduto">
							<div class="card">
								<div class="card-header d-flex align-items-center justify-content-between">
									<h4>
										E-mail
									</h4>
								</div>
								<div class="card-body">
									<div class="row">
										<div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
											<div class="form-group">
												<label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
												<input type="text" class="form-control" data-bind="class: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
											</div>
										</div>
										<div class="col-12 col-md-3" data-bind="visible: Situacao.visible">
											<div class="form-group">
												<label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
												<select class="form-control" data-bind="options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { id : Situacao.id}"></select>
											</div>
										</div>
										<div class="col-12">
											<div id="txtEditor"></div>
										</div>
										<div class="col-12">
											<h5 class="mt-1">Tags:</h5>
											<div class="checkboxes">
												<button class="btn btn-default mb-2" type="button" data-bind="click: TagRemetente.eventClick, visible: TagRemetente.visible, text: TagRemetente.text, attr: { id : TagRemetente.id}"></button>
												<button class="btn btn-default ms-2 mb-2" type="button" data-bind="click: TagDestinatario.eventClick, visible: TagDestinatario.visible, text: TagDestinatario.text, attr: { id : TagDestinatario.id}"></button>
												<button class="btn btn-default ms-2 mb-2" type="button" data-bind="click: TagNumeroPedido.eventClick, visible: TagNumeroPedido.visible, text: TagNumeroPedido.text, attr: { id : TagNumeroPedido.id}"></button>
												<button class="btn btn-default ms-2 mb-2" type="button" data-bind="click: TagQuantidadePedidos.eventClick, visible: TagQuantidadePedidos.visible, text: TagQuantidadePedidos.text, attr: { id : TagQuantidadePedidos.id}"></button>
												<button class="btn btn-default ms-2 mb-2" type="button" data-bind="click: TagDataHoraAgendamento.eventClick, visible: TagDataHoraAgendamento.visible, text: TagDataHoraAgendamento.text, attr: { id : TagDataHoraAgendamento.id}"></button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="col-6" id="knockoutDestinatarios">
							<div class="card">
								<div class="card-header d-flex align-items-center justify-content-between">
									<h4>
										Destinatários
									</h4>
									<button type="button" class="btn btn-labeled btn-primary" data-bind="attr: { id: AdicionarDestinatario.idBtnSearch}">
										<i class="fal fa-plus"></i><span data-bind="text: AdicionarDestinatario.text"></span>
									</button>
								</div>
								<div class="card-body">
									<div class="row">
										<table width="100%" class="table table-bordered table-hover mt-2" data-bind="attr: { id: Grid.id}" cellspacing="0"></table>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div id="knockoutCRUDNotificacaoRetiradaProduto" class="d-flex justify-content-end mt-3">
						<button class="btn btn-danger" type="button" data-bind="click: Excluir.eventClick, visible: Excluir.visible, text: Excluir.text, attr: { id : Excluir.id}"></button>
						<button class="btn btn-default ms-2" type="button" data-bind="click: Cancelar.eventClick, text: Cancelar.text, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}"></button>
						<button class="btn btn-success ms-2" type="button" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick,visible: Adicionar.visible, text: Adicionar.text, attr: { id : Adicionar.id}"></button>
						<button class="btn btn-success ms-2" type="button" data-bind="click: Atualizar.eventClick,visible: Atualizar.visible, text: Atualizar.text, attr: { id : Atualizar.id}"></button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

<script src="~/scripts/notificacaoRetiradaProduto"></script>
<script src="~/scripts/summernote"></script>

<script type="text/javascript">
	pageSetUp();

	$(document).ready(function () {
		loadNotificacaoRetiradaProduto();
	});

</script>

