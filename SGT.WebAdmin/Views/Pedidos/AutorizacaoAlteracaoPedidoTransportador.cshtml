
<section>
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Pedido</li>
        <li class="breadcrumb-item active">  Autorização de Alteração de Pedidos </li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Autorização de Alteração de Pedidos
        </h1>
        <div class="subheader-help">
            <button type="button" onclick="iniciarAjuda(960)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
        </div>
    </div>

    <div id="knockoutPesquisaAlteracaoPedido">
        <div class="panel">
            <div class="panel-container">
                <div class="panel-hdr">
                    <h3> Pesquisar Alteração de Pedidos</h3>
                </div>
                <div class="panel-content">
                    <form>
                        <div class="row">
                            <div class="col-4 col-md-3">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroPedidoEmbarcador.text, attr: { for: NumeroPedidoEmbarcador.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NumeroPedidoEmbarcador.val, attr: { maxlength: NumeroPedidoEmbarcador.maxlength, id : NumeroPedidoEmbarcador.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-4 col-md-3">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicio.text, attr: { for: DataInicio.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataInicio.val, attr: { maxlength: DataInicio.maxlength, id : DataInicio.id} " />
                                </div>
                            </div>
                            <div class="col-4 col-md-3">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataLimite.text, attr: { for: DataLimite.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataLimite.val, attr: { maxlength: DataLimite.maxlength, id : DataLimite.id}" />
                                </div>
                            </div>
                            <div class="col-6 col-md-3">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: SituacaoAprovacao.text, attr: { for: SituacaoAprovacao.id }"></label>
                                    <select class="form-control" data-bind="options: SituacaoAprovacao.options, optionsText: 'text', optionsValue: 'value', value: SituacaoAprovacao.val, attr: { id : SituacaoAprovacao.id}, event: {change: SituacaoAprovacao.eventChange}"></select>
                                </div>
                            </div>
                        </div>

                    </form>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel">
            <div class="panel-container">
                <div class="panel-hdr">
                    <h3>Alterações de Pedidos</h3>
                </div>
                <div class="panel-content">
                    <div class="d-flex justify-content-end mb-2">
                        <button class="btn btn-primary" type="button" data-bind="click: SelecionarTodos.eventClick, text: SelecionarTodos.text, attr: { id: SelecionarTodos.id}, visible: SelecionarTodos.visible"></button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    <div class="d-flex justify-content-end mt-3">
                        <button class="btn btn-danger me-2" type="button" data-bind="click: RejeitarTodas.eventClick, attr: { id: RejeitarTodas.id }, visible: RejeitarTodas.visible">
                            <span data-bind="text: RejeitarTodas.text"></span>
                        </button>
                        <button class="btn btn-success" type="button" data-bind="click: AprovarTodas.eventClick, attr: { id: AprovarTodas.id }, visible: AprovarTodas.visible">
                            <span data-bind="text: AprovarTodas.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div id="divModalAlteracaoPedido" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Informações da Alteração de Pedido</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="#knockoutAlteracaoPedido" class="nav-link active" data-bs-toggle="tab">
                            <i class="fal fa-info-circle"></i><span class="hidden-mobile hidden-tablet"> Pedido</span>
                        </a>
                    </li>
                    <li id="liCamposAlterados" class="nav-item">
                        <a href="#knockoutCamposAlterados" class="nav-link" data-bs-toggle="tab">
                            <i class="fal fa-info-circle"></i><span class="hidden-mobile hidden-tablet"> Alterações</span>
                        </a>
                    </li>
                </ul>
                <div class="tab-content border border-top-0 p-3">
                    <div id="knockoutAlteracaoPedido" class="tab-pane fade active show">
                        <h3>Detalhes do Pedido</h3>
                        <div class="row">
                            <div class="col-12 col-md-6">
                                <div class="row">
                                    <label>
                                        <strong data-bind="text: NumeroPedidoEmbarcador.text"></strong>
                                        <span data-bind="text: NumeroPedidoEmbarcador.val"></span>
                                    </label>
                                    <label>
                                        <strong data-bind="text: Filial.text"></strong>
                                        <span data-bind="text: Filial.val"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="row">
                                    <label>
                                        <strong data-bind="text: TipoCarga.text"></strong>
                                        <span data-bind="text: TipoCarga.val"></span>
                                    </label>
                                    <label>
                                        <strong data-bind="text: TipoOperacao.text"></strong>
                                        <span data-bind="text: TipoOperacao.val"></span>
                                    </label>
                                    <label>
                                        <strong data-bind="text: Cargas.text"></strong>
                                        <span data-bind="text: Cargas.val"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="knockoutCamposAlterados" class="tab-pane fade">
                        <h3>Detalhes das Alterações</h3>
                        <div class="row">
                            <div>
                                <table width="100%" class="table table-bordered table-hover" id="grid-pedido-campos-alterados"></table>

                            </div>
                        </div>
                        <div class="tab-pane fade padding-10 no-padding-bottom content-no-padding" id="knockoutCamposAlterados">
                            <header>Detalhes das Alterações</header>
                            <div class="smart-form">
                                <table width="100%" class="table table-bordered table-hover" id="grid-pedido-campos-alterados"></table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3" id="knockoutCRUDAlteracaoPedido">
                    <button class="btn btn-danger ms-1" type="button" data-bind="click: Rejeitar.eventClick, attr: { id : Rejeitar.id}">
                        <span data-bind="text: Rejeitar.text"></span>
                    </button>
                    <button class="btn btn-success ms-1" type="button" data-bind="click: Aprovar.eventClick, attr: { id : Aprovar.id}">
                        <span data-bind="text: Aprovar.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="divModalRejeitarAlteracaoPedido" role="dialog" aria-hidden="true">
    <div id="knockoutRejeicaoAlteracaoPedido" class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Rejeitar</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 col-md-12" data-bind="visible: Motivo.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Motivo.text, attr: { for: Motivo.id }"></label>
                        <div class="input-group">
                            <input type="text" class="form-control" data-bind="css: Motivo.requiredClass, value: Motivo.val, valueUpdate: 'afterkeydown', attr: { maxlength: Motivo.maxlength, id : Motivo.id}" />
                            <div class="input-group-append">
                                <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Motivo.idBtnSearch}" type="button" aria-label="Buscar">
                                    <i class="fal fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end ms-1">
                    <button class="btn btn-default ms-1" type="button" data-bind="click: Cancelar.eventClick, attr: { id : Cancelar.id}">
                        <span data-bind="text: Cancelar.text"></span>
                    </button>
                    <button class="btn btn-danger ms-1" type="button" data-bind="click: Rejeitar.eventClick, attr: { id : Rejeitar.id}">
                        <span data-bind="text: Rejeitar.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/scripts/autorizacaoAlteracaoPedidoTransportador"></script>

