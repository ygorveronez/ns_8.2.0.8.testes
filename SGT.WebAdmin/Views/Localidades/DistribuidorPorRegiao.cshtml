
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Localidades</li>
    <li class="breadcrumb-item">Distribuidor por Região</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Distribuidor por Região
    </h1>
</div>

<div id="knockoutPesquisaDistribuidor">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Motivos
                </button>
                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-6" data-bind="visible: Regiao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Regiao.text, attr: { for: Regiao.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Regiao.requiredClass, value: Regiao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Regiao.maxlength, id : Regiao.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Regiao.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Distribuidor.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Distribuidor.text, attr: { for: Distribuidor.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Distribuidor.requiredClass, value: Distribuidor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Distribuidor.maxlength, id : Distribuidor.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Distribuidor.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Motivo de Irregularidades
            </h3>
        </div>
        <div class="panel-content">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tabDistribuidorPorRegiao" class="nav-link active" data-bs-toggle="tab">
                        <span class="hidden-mobile hidden-tablet">Distribuidor por Região</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#tabTipoCarga" class="nav-link" data-bs-toggle="tab">
                        <span class="hidden-mobile hidden-tablet">Tipo de Carga</span>
                    </a>
                </li>
            </ul>
            <div class="tab-content border border-top-0 p-3">
                <div class="tab-pane fade active show" id="tabDistribuidorPorRegiao" role="tabpanel">
                    <form>
                        <div class="row" id="knockoutDistribuidorPorRegiao">
                            <div class="col-12 col-md-6" data-bind="visible: Regiao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Regiao.text, attr: { for: Regiao.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Regiao.requiredClass, value: Regiao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Regiao.maxlength, id : Regiao.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Regiao.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Distribuidor.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Distribuidor.text, attr: { for: Distribuidor.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Distribuidor.requiredClass, value: Distribuidor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Distribuidor.maxlength, id : Distribuidor.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Distribuidor.idBtnSearch}" type="button" aria-label="Buscar">
