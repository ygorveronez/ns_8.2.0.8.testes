                                    <label class="form-label" data-bind="text: Status.text, attr: { for: Status.id }"></label>
                                    <select class="form-control" data-bind="class: Status.requiredClass, options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { maxlength: Status.maxlength, id : Status.id}"></select>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="tab-pane fade" id="tabTipoCarga" role="tabpanel">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-12" id="knockoutTipoCarga">
                                <button class="btn btn-primary mb-2 mt-2" type="button" data-bind="click: TipoCarga.eventClick, attr: { id: TipoCarga.idBtnSearch}">
                                    <i class="fal fa-plus"></i><span data-bind="text: TipoCarga.text"></span>
                                </button>
                                <div>
                                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: {id: TipoCarga.idGrid}" cellspacing="0"></table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <footer id="knockoutCRUDCadastroDistribuidorPorRegiao">
                    <div class="d-flex justify-content-end ">
                        <button type="button" class="btn btn-primary m-1" data-loading-text="Aguarde..." data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                            <span data-bind=" text: Cancelar.text"></span>
                        </button>
                        <button type="button" class="btn btn-success m-1" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible,attr: { id : Atualizar.id}">
                            <i class="fal fa-check"></i>
                            <span data-bind="text: Atualizar.text"></span>
                        </button>
                        <button type="button" class="btn btn-success m-1" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                            <span data-bind=" text: Adicionar.text"></span>
                        </button>

                    </div>
                </footer>
            </div>
        </div>
    </div>
</div>

