<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Configurações</li>
    <li class="breadcrumb-item active">Espécies</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i></i> Espécies
    </h1>
</div>

<div id="knockoutPesquisaEspecie">
    <div class="panel">
        <div class="panel-container ">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed " data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Especies
                </button>
                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-8" data-bind="visible: DescricaoEspecie.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DescricaoEspecie.text, attr: { for: DescricaoEspecie.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DescricaoEspecie.val, valueUpdate: 'afterkeydown', attr: { maxlength: DescricaoEspecie.maxlength, id : DescricaoEspecie.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible : Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value',value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>                            
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id : Pesquisar.id}">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <div class="widget-body">
                        <table width="100%" class="table  table-bordered table-hover" data-bind="attr: { id : Pesquisar.idGrid}" cellspacing="0"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Espécie e Raça
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knockoutCadastro">
                    <div class="col-12 col-md-8" data-bind="visible: DescricaoEspecie.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DescricaoEspecie.text, attr: { for: DescricaoEspecie.id }"></label>
                            <input type="text" class="form-control" data-bind="css: DescricaoEspecie.requiredClass, value: DescricaoEspecie.val, valueUpdate: 'afterkeydown', attr: { maxlength: DescricaoEspecie.maxlength, id : DescricaoEspecie.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: Ativo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Ativo.text"></label>
                            <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-7" data-bind="visible: DescricaoRaca.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DescricaoRaca.text, attr: { for: DescricaoRaca.id }"></label>
                            <input type="text" class="form-control" data-bind="css: DescricaoRaca.requiredClass, value: DescricaoRaca.val, valueUpdate: 'afterkeydown', attr: { maxlength: DescricaoRaca.maxlength, id : DescricaoRaca.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: AtivoRaca.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: AtivoRaca.text"></label>
                            <select class="form-control" data-bind="options: AtivoRaca.options, optionsText: 'text', optionsValue: 'value', value: AtivoRaca.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-md-3 mt-5">
                        <button class="btn btn-success waves-effect waves-themed" data-bind="click: AdicionarRaca.eventClick, visible: AdicionarRaca.visible, attr: { value: AdicionarRaca.text, id : AdicionarRaca.id}">
                            <span data-bind="text: AdicionarRaca.text"></span>
                        </button>
                    </div>
                    <div class="insideNoPaddignTable my-3">
                        <table width="100%" class="table  table-bordered table-hover" data-bind="attr: { id : Racas.idGrid}" cellspacing="0"></table>
                    </div>
                </div>
                <footer id="knockoutCRUD">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick,visible: Cancelar.visible, attr: {value: Cancelar.text, id : Cancelar.id}">
                                <i class="fal fa-ban"></i>
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger mx-3" data-bind="click: Excluir.eventClick,visible: Excluir.visible, attr: {value: Excluir.text, id : Excluir.id}">
                                <i class="fal fa-trash"></i>
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick,visible: Atualizar.visible, attr: {value: Atualizar.text, id : Atualizar.id}">
                                <i class="fal fa-check"></i>
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick,visible: Adicionar.visible, attr: {value: Adicionar.text, id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/especie"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadEspecie();
    });

</script>