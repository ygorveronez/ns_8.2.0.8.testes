
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pessoas</li>
    <li class="breadcrumb-item active">Tipo EPI </li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        <i></i> Tipo de EPI's
    </h1>
</div>

<div id="knockoutPesquisaTipoEPI">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Tipo de EPI's
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible : Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar EPI's
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knockoutCadastroTipoEPI">
                    <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                            <input type="text" class="form-control" data-bind="css: Descricao.requiredClass,value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: Ativo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Ativo.text"></label>
                            <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-4" data-bind="visible: MarcaEPI.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: MarcaEPI.text"></label>
                            <div class="input-group">
                                <input type="text" data-bind="value: MarcaEPI.val, valueUpdate: 'afterkeydown', attr: { maxlength: MarcaEPI.maxlength, id : MarcaEPI.id},class: MarcaEPI.requiredClass" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed is-invalid" type="button" data-bind="attr: { id: MarcaEPI.idBtnSearch}">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Tamanho.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: Tamanho.val, attr: { maxlength: Tamanho.maxlength, name: Tamanho.id, id: Tamanho.id }">
                                <label class="custom-control-label" data-bind="text: Tamanho.text, attr: { for: Tamanho.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: DiasRevisao.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: DiasRevisao.val, attr: { maxlength: DiasRevisao.maxlength, name: DiasRevisao.id, id: DiasRevisao.id }">
                                <label class="custom-control-label" data-bind="text: DiasRevisao.text, attr: { for: DiasRevisao.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: DiasValidade.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: DiasValidade.val, attr: { maxlength: DiasValidade.maxlength, name: DiasValidade.id, id: DiasValidade.id }">
                                <label class="custom-control-label" data-bind="text: DiasValidade.text, attr: { for: DiasValidade.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Descartavel.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: Descartavel.val, attr: { maxlength: Descartavel.maxlength, name: Descartavel.id, id: Descartavel.id }">
                                <label class="custom-control-label" data-bind="text: Descartavel.text, attr: { for: Descartavel.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: InstrucaoUso.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: InstrucaoUso.val, attr: { maxlength: InstrucaoUso.maxlength, name: InstrucaoUso.id, id: InstrucaoUso.id }">
                                <label class="custom-control-label" data-bind="text: InstrucaoUso.text, attr: { for: InstrucaoUso.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Valor.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: Valor.val, attr: { maxlength: Valor.maxlength, name: Valor.id, id: Valor.id }">
                                <label class="custom-control-label" data-bind="text: Valor.text, attr: { for: Valor.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: NumeroCertificado.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: NumeroCertificado.val, attr: { maxlength: NumeroCertificado.maxlength, name: NumeroCertificado.id, id: NumeroCertificado.id }">
                                <label class="custom-control-label" data-bind="text: NumeroCertificado.text, attr: { for: NumeroCertificado.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Caracteristica.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: Caracteristica.val, attr: { maxlength: Caracteristica.maxlength, name: Caracteristica.id, id: Caracteristica.id }">
                                <label class="custom-control-label" data-bind="text: Caracteristica.text, attr: { for: Caracteristica.id }"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <footer id="knockoutCRUDTipoEPI">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                                <i class="fal fa-ban"></i>
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger mx-3" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { id : Excluir.id}">
                                <i class="fal fa-trash"></i>
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { id : Atualizar.id}">
                                <i class="fal fa-check"></i>
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/tipoEPI"></script>
