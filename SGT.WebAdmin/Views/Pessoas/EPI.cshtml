
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pessoas</li>
    <li class="breadcrumb-item active">EPI</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> EPI
    </h1>
</div>

<div id="knockoutPesquisaEPI">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar EPI's
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar EPI
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knockoutCadastroEPI">
                    <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Descricao.text"></label>
                            <input type="text" class="form-control" data-bind="value: Descricao.val,  class: Descricao.requiredClass, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: Ativo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Ativo.text"></label>
                            <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-4" data-bind="visible: TipoEPI.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: TipoEPI.text, attr: { for: TipoEPI.id }"></label>
                            <div class="input-group">
                                <input type="text" data-bind="css: TipoEPI.requiredClass, value: TipoEPI.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': TipoEPI.text, maxlength: TipoEPI.maxlength, id: TipoEPI.id, name: TipoEPI.id }" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: TipoEPI.idBtnSearch}">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: Tamanho.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Tamanho.text"></label>
                            <input type="text" class="form-control" data-bind="value: Tamanho.val, valueUpdate: 'afterkeydown', attr: { maxlength: Tamanho.maxlength, id : Tamanho.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: DiasRevisao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DiasRevisao.text"></label>
                            <input type="text" class="form-control" data-bind="value: DiasRevisao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DiasRevisao.maxlength, id : DiasRevisao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: DiasValidade.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DiasValidade.text"></label>
                            <input type="text" class="form-control" data-bind="value: DiasValidade.val, valueUpdate: 'afterkeydown', attr: { maxlength: DiasValidade.maxlength, id : DiasValidade.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Valor.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Valor.text"></label>
                            <input type="text" class="form-control" data-bind="value: Valor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Valor.maxlength, id : Valor.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: NumeroCertificado.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: NumeroCertificado.text"></label>
                            <input type="text" class="form-control" data-bind="value: NumeroCertificado.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroCertificado.maxlength, id : NumeroCertificado.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-12"  data-bind="visible: Descartavel.visible">
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" data-bind="checked: Descartavel.val, valueUpdate: 'afterkeydown', attr: { name: Descartavel.id, id : Descartavel.id}">
                                <label class="custom-control-label" data-bind="text: Descartavel.text, attr: { for: Descartavel.id }"></label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: InstrucaoUso.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: InstrucaoUso.text"></label>
                            <textarea type="text" rows="5" class="form-control" data-bind="value: InstrucaoUso.val, valueUpdate: 'afterkeydown', attr: { maxlength: InstrucaoUso.maxlength, id : InstrucaoUso.id}"></textarea>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Caracteristica.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Caracteristica.text"></label>
                            <textarea type="text" rows="5" class="form-control" data-bind="value: Caracteristica.val, valueUpdate: 'afterkeydown', attr: { maxlength: Caracteristica.maxlength, id : Caracteristica.id}"></textarea>
                        </div>
                    </div>
                </div>
                <footer id="knockoutCRUDEPI">
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                                <i class="fal fa-ban"></i>
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger mx-3" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                                <i class="fal fa-trash"></i>
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                                <i class="fal fa-check"></i>
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/epi"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadEPI();
    });

</script>

