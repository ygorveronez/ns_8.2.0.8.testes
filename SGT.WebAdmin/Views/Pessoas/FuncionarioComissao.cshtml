
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pessoas</li>
    <li class="breadcrumb-item active">Funcionário Comissão</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        Comissão de Funcionário
    </h1>
</div>

<div id="knockoutPesquisaFuncionarioComissao">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Comissões de Funcionários
                </button>
                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-3" data-bind="visible: DataInicio.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicio.text, attr: { for: DataInicio.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataInicio.requiredClass, value: DataInicio.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicio.maxlength, id : DataInicio.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataFim.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataFim.text, attr: { for: DataFim.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataFim.requiredClass, value: DataFim.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFim.maxlength, id : DataFim.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: Situacao.requiredClass, value: Situacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Situacao.maxlength, id : Situacao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Funcionario.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Funcionario.text, attr: { for: Funcionario.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Funcionario.requiredClass, value: Funcionario.val, valueUpdate: 'afterkeydown', attr: { maxlength: Funcionario.maxlength, id : Funcionario.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Funcionario.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="wid-id-4" class="panel" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Comissão de Funcionário
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div id="knockoutEtapasFuncionarioComissao">
                    <ul class="nav nav-steps">
                        <li data-target="#step1" data-bind="visible : Etapa1.visible">
                            <button class="active" data-bs-target="#tabComissao" data-bs-toggle="tab" data-bind="attr: {id : Etapa1.idTab }, click : Etapa1.eventClick, visible : Etapa1.visible">
                                <span class="step" data-bind="attr: {'data-content' : Etapa1.tooltip, 'data-original-title' : Etapa1.tooltipTitle }">
                                    <i class="fal fa-file-alt"></i>
                                </span>
                                <span class="title" data-bind="text: Etapa1.text"></span>
                            </button>
                        </li>
                        <li data-target="#step2" data-bind="visible : Etapa2.visible">
                            <button data-bs-target="#knockoutAprovacaoFuncionarioComissao" data-bs-toggle="tab" data-bind="attr: {id : Etapa2.idTab }, click : Etapa2.eventClick">
                                <span class="step" data-bind="attr: {'data-content' : Etapa2.tooltip, 'data-original-title' : Etapa2.tooltipTitle }">
                                    <i class="fal fa-check-circle"></i>
                                </span>
                                <span class="title" data-bind="text: Etapa2.text"></span>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="tab-content" id="myTabContent">
                    <!-- Etapa Selecao Documentos -->
                    <div id="tabComissao" class="tab-pane fade show active">
                        <div class="card mb-3" id="knockoutFuncionarioComissao">
                            <div class="card-header">
                                <h3 class="card-title">Títulos</h3>
                            </div>
                            <div class="card-body">
                                <!-- Filtro dos Documento -->
                                <div class="row">
                                    <div class="col-12 col-md-2" data-bind="visible: Numero.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Numero.text, attr: { for: Numero.id }"></label>
                                            <input type="text" class="form-control" data-bind="enable: Numero.enable, class: Numero.requiredClass, value: Numero.val, valueUpdate: 'afterkeydown', attr: { maxlength: Numero.maxlength, id : Numero.id}" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-4" data-bind="visible: Funcionario.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Funcionario.text, attr: { for: Funcionario.id }"></label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" data-bind="css: Funcionario.requiredClass, value: Funcionario.val, valueUpdate: 'afterkeydown',enable: Funcionario.enable,  attr: { maxlength: Funcionario.maxlength, id : Funcionario.id}" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Funcionario.idBtnSearch} , enable: Funcionario.enable" type="button" aria-label="Buscar">
                                                        <i class="fal fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-2" data-bind="visible: DataInicial.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: DataInicial.text, attr: { for: DataInicial.id }"></label>
                                            <input type="text" class="form-control" data-bind="class: DataInicial.requiredClass, value: DataInicial.val, valueUpdate: 'afterkeydown', enable: DataInicial.enable, attr: { maxlength: DataInicial.maxlength, id : DataInicial.id}" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-2" data-bind="visible: DataFinal.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: DataFinal.text, attr: { for: DataFinal.id }"></label>
                                            <input type="text" class="form-control" data-bind="class: DataFinal.requiredClass, value: DataFinal.val, valueUpdate: 'afterkeydown', enable: DataFinal.enable, attr: { maxlength: DataFinal.maxlength, id : DataFinal.id}" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-2">
                                        <button class="btn btn-success" style="margin-top: 27px" type="button" data-bind="click: ConsultarTitulo.eventClick, attr: { id: ConsultarTitulo.id}">
                                            <i class="fal fa-search"></i><span data-bind="text: ConsultarTitulo.text"></span>
                                        </button>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: {id: GridTitulos.id}" cellspacing="0"></table>
                                    </div>
                                    <b><label data-bind="visible: ValorTotalFinal.visible, text: ValorTotalFinal.text"><span data-bind="text: ValorTotalFinal.val"></span></label></b>
                                    <b><label data-bind="visible: QuantidadeTitulos.visible, text: QuantidadeTitulos.text"><span data-bind="text: QuantidadeTitulos.val"></span></label></b>
                                    <div class="col-12 col-md-12 mt-2" data-bind="visible: Observacao.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Observacao.text, attr: { for: Observacao.id }"></label>
                                            <textarea class="form-control" rows="4" data-bind="value: Observacao.val, valueUpdate: 'afterkeydown', enable: Observacao.enable, attr: { maxlength: Observacao.maxlength, id : Observacao.id }"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Etapa Integracao -->
                    <div id="knockoutAprovacaoFuncionarioComissao" class="tab-pane fade">
                        <div class="card">
                            <div class="card-body row">
                                <div class="col-12 col-md-6">
                                    <div class="card">
                                        <div class="card-header d-flex align-items-center justify-content-between">
                                            <h3 class="card-title">Detalhes</h3>
                                        </div>
                                        <div class="card-body row">
                                            <b><label data-bind="visible: ValorFinal.visible, text: ValorFinal.text"><span data-bind="text: ValorFinal.val"></span></label></b>
                                            <b><label data-bind="visible: QuantidadeTitulos.visible, text: QuantidadeTitulos.text"><span data-bind="text: QuantidadeTitulos.val"></span></label></b>
                                            <b><label data-bind="visible: DataGeracao.visible, text: DataGeracao.text"><span data-bind="text: DataGeracao.val"></span></label></b>
                                            <b><label data-bind="visible: Funcionario.visible, text: Funcionario.text"><span data-bind="text: Funcionario.val"></span></label></b>
                                            <b><label data-bind="visible: Operador.visible, text: Operador.text"><span data-bind="text: Operador.val"></span></label></b>
                                            <b><label data-bind="visible: PercentualComissao.visible, text: PercentualComissao.text"><span data-bind="text: PercentualComissao.val"></span></label></b>
                                            <b><label data-bind="visible: PercentualComissaoAcrescimo.visible, text: PercentualComissaoAcrescimo.text"><span data-bind="text: PercentualComissaoAcrescimo.val"></span></label></b>
                                            <b><label data-bind="visible: PercentualComissaoTotal.visible, text: PercentualComissaoTotal.text"><span data-bind="text: PercentualComissaoTotal.val"></span></label></b>
                                            <b><label data-bind="visible: ValorComissao.visible, text: ValorComissao.text"><span data-bind="text: ValorComissao.val"></span></label></b>
                                            <b><label data-bind="visible: Situacao.visible, text: Situacao.text"><span data-bind="text: Situacao.val"></span></label></b>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="card">
                                        <div class="card-header d-flex align-items-center justify-content-between">
                                            <h3 class="card-title">Aprovador</h3>
                                        </div>
                                        <div class="card-body">
                                            <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Regras.idGrid}" cellspacing="0"></table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>      
            <footer id="knockoutCRUD" class="mt-2">
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-default" type="button" data-bind="visible: Cancelar.visible, click: Cancelar.eventClick, attr: { id: Cancelar.id}">
                           <span data-bind="text: Cancelar.text"></span>
                        </button>
                    </div>
                    <div class="col-6 d-flex justify-content-end">
                        <button class="btn btn-default me-2" type="button" data-bind="click: Limpar.eventClick, visible: Limpar.visible, text: Limpar.text, attr: { id : Limpar.id}"></button>
                        <button class="btn btn-success" type="button" data-bind="click: GerarComissao.eventClick, attr: { id: GerarComissao.id}">
                            <span data-bind="text: GerarComissao.text"></span>
                        </button>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>

<div id="divModalDetalhesAutorizacao" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes da Autorização</h4>
            </div>
            <div class="modal-body row" id="knockoutDetalheAutorizacao">   
                    <label data-bind="visible: Regra.visible, text: Regra.text"><span data-bind="text: Regra.val"></span></label>
                    <label data-bind="visible: Situacao.visible, text: Situacao.text"><span data-bind="text: Situacao.val"></span></label>
                    <label data-bind="visible: Usuario.visible, text: Usuario.text"><span data-bind="text: Usuario.val"></span></label>
                    <label data-bind="visible: Data.visible && Data.val() != '', text: Data.text"><span data-bind="text: Data.val"></span></label>
                    <label data-bind="visible: Motivo.visible && Motivo.val() != '', text: Motivo.text"><span data-bind="text: Motivo.val"></span></label>
            </div>
        </div>
    </div>
</div>

