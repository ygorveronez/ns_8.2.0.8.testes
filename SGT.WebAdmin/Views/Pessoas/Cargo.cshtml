
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Pessoas</li>
    <li class="breadcrumb-item active">Cargo</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Cargo
    </h1>
</div>

<div id="knockoutPesquisaCargo">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Cargos
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Cargo
            </h3>
        </div>
        <div class="panel-content">
            <form id="knockoutCargo">
                <div class="row">
                    <div class="col-12 col-md-3" data-bind="visible: Descricao.visible" id="descricao">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Descricao.text"></label>
                            <input type="text" class="form-control" data-bind="css: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: ValorFaturamento.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: ValorFaturamento.text"></label>
                            <input type="text" class="form-control" data-bind="value: ValorFaturamento.val, valueUpdate: 'afterkeydown', attr: { maxlength: ValorFaturamento.maxlength, id : ValorFaturamento.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: ValorBonificacao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: ValorBonificacao.text"></label>
                            <input type="text" class="form-control" data-bind="value: ValorBonificacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: ValorBonificacao.maxlength, id : ValorBonificacao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Ativo.text"></label>
                            <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: ComissaoPadrao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: ComissaoPadrao.text"></label>
                            <input type="text" class="form-control" data-bind="value: ComissaoPadrao.val, valueUpdate: 'afterkeydown', attr: { maxlength: ComissaoPadrao.maxlength, id : ComissaoPadrao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: MediaEquivalente.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: MediaEquivalente.text"></label>
                            <input type="text" class="form-control" data-bind="value: MediaEquivalente.val, valueUpdate: 'afterkeydown', attr: { maxlength: MediaEquivalente.maxlength, id : MediaEquivalente.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: SinistroEquivalente.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: SinistroEquivalente.text"></label>
                            <input type="text" class="form-control" data-bind="value: SinistroEquivalente.val, valueUpdate: 'afterkeydown', attr: { maxlength: SinistroEquivalente.maxlength, id : SinistroEquivalente.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: AdvertenciaEquivalente.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: AdvertenciaEquivalente.text"></label>
                            <input type="text" class="form-control" data-bind="value: AdvertenciaEquivalente.val, valueUpdate: 'afterkeydown', attr: { maxlength: AdvertenciaEquivalente.maxlength, id : AdvertenciaEquivalente.id}" />
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="row">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                                <i class="fal fa-ban"></i>
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger mx-3" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                                <i class="fal fa-trash"></i>
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                                <i class="fal fa-check"></i>
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/cargo"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadCargo();
    });

</script>

