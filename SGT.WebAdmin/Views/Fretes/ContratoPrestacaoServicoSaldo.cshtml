<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Fretes</li>
    <li class="breadcrumb-item active">Contrato Prestação Serviço Saldo</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Saldos de Contrato de Prestação de Serviço
    </h1>
</div>

<div id="knockoutPesquisaContratoPrestacaoServicoSaldo">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Saldos
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-6" data-bind="visible: ContratoPrestacaoServico.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: ContratoPrestacaoServico.text, attr: { for: ContratoPrestacaoServico.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: ContratoPrestacaoServico.requiredClass, value: ContratoPrestacaoServico.val, valueUpdate: 'afterkeydown', attr: { maxlength: ContratoPrestacaoServico.maxlength, id : ContratoPrestacaoServico.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: ContratoPrestacaoServico.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicial.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataInicial.val, attr: { maxlength: DataInicial.maxlength, id : DataInicial.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataLimite.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataLimite.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataLimite.val, attr: { maxlength: DataLimite.maxlength, id : DataLimite.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: TipoLancamento.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoLancamento.text, attr: { for: TipoLancamento.id }"></label>
                                    <select class="form-control" data-bind="options: TipoLancamento.options, optionsText: 'text', optionsValue: 'value', value: TipoLancamento.val, attr: { id : TipoLancamento.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel d-none contrato-prestacao-servico-saldo-container" id="contrato-prestacao-servico-saldo-container">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3><i class="fal fa-edit"></i> Saldos</h3>
        </div>
        <div class="panel-content" id="knockoutContratoPrestacaoServicoSaldo">
            <div class="remocao-item-container" id="remocao-item-contrato-prestacao-servico-saldo" style="display: none;">
                <i class="fal fa-trash"></i> <span>Remover</span>
            </div>
            <div class="row" data-bind="visible: Adicionar.visible">
                <div class="col-12 d-flex justify-content-end">
                    <button class="btn btn-success waves-effect waves-themed" data-bind="click: Adicionar.eventClick" type="button">
                        <i class="fal fa-plus"></i><span data-bind="text: Adicionar.text"></span>
                    </button>
                </div>
            </div>
            <table width="100%" class="table table-bordered table-hover table-condensed table-striped tableCursorMove" id="grid-contrato-prestacao-servico-saldo" cellspacing="0"></table>
        </div>
    </div>
</div>

<div class="modal fade" id="divModalCadastroContratoPrestacaoServicoSaldo" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content" id="knockoutCadastroContratoPrestacaoServicoSaldo">
            <div class="modal-header">
                <h4 class="modal-title">Adicionar Saldo</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-12 col-md-3" data-bind="visible: Valor.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Valor.text"></label>
                        <input type="text" class="form-control" data-bind="css: Valor.requiredClass, value: Valor.val, enable: Valor.enable, valueUpdate: 'afterkeydown', attr: { maxlength: Valor.maxlength, id : Valor.id}" />
                    </div>
                </div>
                <div class="col-12 col-md-12" data-bind="visible: Descricao.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                        <textarea class="form-control" rows="5" data-bind="css: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id }"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-bind="click: Adicionar.eventClick, attr: { value: Adicionar.text, id : Adicionar.id}">
                   <span data-bind="text: Adicionar.text"></span>
                </button>
            </div>
        </div>
    </div>
</div>



