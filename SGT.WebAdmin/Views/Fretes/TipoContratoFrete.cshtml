
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Fretes</li>
    <li class="breadcrumb-item">Contratos</li>
    <li class="breadcrumb-item active">Tipo de Contrato de Frete</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Tipo de Contrato de Frete
    </h1>
</div>

<div id="knockoutPesquisaTipoContratoFrete">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Tipos de Contratos de Frete
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-8" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-fullscreenbutton="false" data-widget-sortable="false" data-widget-custombutton="false">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-edit"></i>
                    Adicionar Tipo de Contrato de Frete
                </h3>
            </div>
            <div class="panel-content">
                <form id="knockoutTipoContratoFrete">
                    <div class="row">
                        <div class="col-12 col-md-8" data-bind="visible: Descricao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Descricao.text"></label>
                                <input type="text" class="form-control" data-bind="css: Descricao.requiredClass,value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: Ativo.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Ativo.text"></label>
                                <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-12" data-bind="visible: Observacao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Observacao.text"></label>
                                <textarea class="form-control" rows="5" data-bind="value: Observacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Observacao.maxlength, id : Observacao.id}"></textarea>
                            </div>
                        </div>

                        <!-- Início de operações ocultas-->

                        <div data-bind="visible: TipoAditivo.visible && ContratoFreteAditivo.codEntity() <= 0" class="col col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <label class="checkbox">
                                <input type="checkbox" data-bind="checked: TipoAditivo.val, valueUpdate: 'afterkeydown', attr: { name: TipoAditivo.id, id : TipoAditivo.id}" />
                                <i></i> <b data-bind="text: TipoAditivo.text"></b>
                            </label>
                        </div>
                        <div data-bind="visible: ContratoFreteAditivo.visible && !TipoAditivo.val()" class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <div class="input-group">
                                <label class="label"><b data-bind="text: ContratoFreteAditivo.text"></b></label>
                                <label data-bind="attr: { class: ContratoFreteAditivo.requiredClass}">
                                    <input type="text" data-bind="value: ContratoFreteAditivo.val, valueUpdate: 'afterkeydown', attr: { maxlength: ContratoFreteAditivo.maxlength, id : ContratoFreteAditivo.id}" />
                                </label>
                                <div class="input-group-btn">
                                    <button data-bind="attr: { id: ContratoFreteAditivo.idBtnSearch}" class="btn btn-default btn-primary botaoBusca" type="button">
                                        <i class="fa fa-search"></i> &nbsp; Buscar &nbsp;
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Fim de operações ocultas -->

                    </div>
                    <footer class="d-flex justify-content-end">
                        <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                            <span data-bind="text: Cancelar.text"></span>
                        </button>
                        <button type="button" class="btn btn-labeled btn-danger mx-1 " data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                            <span data-bind="text: Excluir.text"></span>
                        </button>
                        <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                            <span data-bind="text: Atualizar.text"></span>
                        </button>
                        <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                            <span data-bind="text: Adicionar.text"></span>
                        </button>
                    </footer>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/tipoContratoFrete"></script>
<script type="text/javascript">

    pageSetUp();

    var _PermiteUsarContratoFreteAditivo = @Html.Raw(ViewBag.UsarContratoFreteAditivo);
    $(document).ready(function () {
        loadTipoContratoFrete();
    });

</script>

