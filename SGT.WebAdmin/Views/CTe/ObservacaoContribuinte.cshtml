
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">CTe</li>
    <li class="breadcrumb-item">Observação do Contribuinte</li>
</ol>
<div class="subheader">
    <h1>
        Observação do Contribuinte
    </h1>
</div>

<div id="knockoutPesquisaObservacaoContribuinte">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Observações do Contribuinte
                </button>
                <div class="mt-2" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-8" data-bind="visible: Texto.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Texto.text, attr: { for: Texto.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: Texto.val, valueUpdate: 'afterkeydown', attr: { maxlength: Texto.maxlength, id : Texto.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text, attr: { for: Ativo.id }"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-end mb-2">
                            <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>
                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Observação do Contribuinte
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knockoutObservacaoContribuinte">
                    <div class="col-12 col-md-6" data-bind="visible: Identificador.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Identificador.text, attr: { for: Identificador.id }"></label>
                            <input type="text" class="form-control" data-bind="css: Identificador.requiredClass, value: Identificador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Identificador.maxlength, id : Identificador.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Tipo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Tipo.text, attr: { for: Tipo.id }"></label>
                            <select class="form-control" data-bind="class: Tipo.requiredClass, options: Tipo.options, optionsText: 'text', optionsValue: 'value', value: Tipo.val, attr: { maxlength: Tipo.maxlength, id : Tipo.id}"></select>
                        </div>
                    </div>

                    <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Ativo.text, attr: { for: Ativo.id }"></label>
                            <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Texto.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Texto.text, attr: { for: Texto.id }"></label>
                            <input type="text" class="form-control" data-bind="css: Texto.requiredClass,value: Texto.val, valueUpdate: 'afterkeydown', attr: { maxlength: Texto.maxlength, id : Texto.id}" />
                        </div>
                    </div>
                    <footer>
                        <div class="row">
                            <div class="col-6">
                                <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                                    <i class="fal fa-ban"></i><span data-bind="text: Cancelar.text"></span>
                                </button>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <button class="btn btn-danger me-2" type="button" data-bind="visible: Excluir.visible, click: Excluir.eventClick, attr: { id: Excluir.id}">
                                    <i class="fal fa-trash"></i><span data-bind="text: Excluir.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { id : Atualizar.id}">
                                    <i class="fal fa-check"></i><span data-bind="text: Atualizar.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="visible: Adicionar.visible, click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                                    <span data-bind="text: Adicionar.text"></span>
                                </button>
                            </div>
                        </div>
                    </footer>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="~/scripts/observacaoContribuinte"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadObservacaoContribuinte();
    });

</script>