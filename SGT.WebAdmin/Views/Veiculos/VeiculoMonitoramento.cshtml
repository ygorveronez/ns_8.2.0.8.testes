<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Veículos</li>
    <li class="breadcrumb-item active">Veículo Monitoramento</li>
</ol>

<div id="knockoutCabecalhoVeiculoMonitoramento">
    <div class="row">
        <div class="header-filtros">
            <div class="layout-and-filters">
                <div class="box-search" style="margin-right:0px">
                    <div data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id" class="button-filter"></div>
                </div>
            </div>
            <div id="carousel-filters" class="carousel" data-ride="carousel" data-bs-interval="false" style="display: none;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="resumos" id="divResumos">
                            <span>{Localize::Veiculos.VeiculoMonitoramento.InformacoesVeiculos}</span>
                            <div class="view-selection-items" id="view-selection-items">
                                <div id="view-total" style="cursor: pointer" class="view-selection" data-bind="click: ClickTotal.eventClick" >
                                    <div class="icon-number" data-bind="text: Total.val"></div>
                                    <span>{Localize::Veiculos.VeiculoMonitoramento.TotalVeiculos}</span>
                                </div>
                                <div class="vr"></div>
                                <div id="view-online" class="view-selection" style="cursor: pointer" data-bind="click: ClickOnline.eventClick">
                                    <div class="icon-number" style="color: #1F7C4A" data-bind="text: Online.val"></div>
                                    <span>{Localize::Veiculos.VeiculoMonitoramento.VeiculosOnline}</span>
                                </div>
                                <div class="vr"></div>
                                <div id="view-offline" class="view-selection" style="cursor: pointer" data-bind="click: ClickOffline.eventClick">
                                    <div class="icon-number" style="color: #FF4E4E" data-bind="text: Offline.val"></div>
                                    <span>{Localize::Veiculos.VeiculoMonitoramento.VeiculosOffline}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="divModalFiltrosPesquisa" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style="padding: 8px">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">{Localize::Veiculos.VeiculoMonitoramento.Filtrar}</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="border" style="padding: 20px" id="knockoutPesquisaVeiculoMonitoramento">
                <form>
                    <div class="row">
                        <div class="col-12 col-md-2" data-bind="visible: PlacaVeiculo.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: PlacaVeiculo.text"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: PlacaVeiculo.requiredClass, value: PlacaVeiculo.val, valueUpdate: 'afterkeydown', attr: { maxlength: PlacaVeiculo.maxlength, id : PlacaVeiculo.id}" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-2" data-bind="visible: TipoVeiculo.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TipoVeiculo.text"></label>
                                <select class="form-control" data-bind="options: TipoVeiculo.options, optionsText: 'text', optionsValue: 'value', value: TipoVeiculo.val, attr: { id : TipoVeiculo.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: Transportador.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: TecnologiaRastreador.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TecnologiaRastreador.text, attr: { for: TecnologiaRastreador.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: TecnologiaRastreador.requiredClass, value: TecnologiaRastreador.val, valueUpdate: 'afterkeydown', attr: { maxlength: TecnologiaRastreador.maxlength, id : TecnologiaRastreador.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TecnologiaRastreador.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: TipoPropriedade.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TipoPropriedade.text, attr: { for: TipoPropriedade.id }"></label>
                                <select class="form-control" data-bind="options: TipoPropriedade.options, optionsText: 'text', optionsValue: 'value', value: TipoPropriedade.val, attr: { id : TipoPropriedade.id}"></select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-2" data-bind="visible: Terminal.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Terminal.text"></label>
                                <input type="text" class="form-control" data-bind="class: Terminal.requiredClass, value: Terminal.val, valueUpdate: 'afterkeydown', attr: { maxlength: Terminal.maxlength, id : Terminal.id}" />
                            </div>
                        </div>
                        <div class="col-12 col-md-2" data-bind="visible: DataPosicao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataPosicao.text"></label>
                                <input type="text" class="form-control" data-bind="class: DataPosicao.requiredClass, value: DataPosicao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataPosicao.maxlength, id : DataPosicao.id}" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <h7><b>{Localize::Veiculos.VeiculoMonitoramento.MaisOpcoes}</b></h7>
                        <div class="col-12 col-md-2 mt-2" data-bind="visible: RastreadorPosicionado.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: RastreadorPosicionado.val, attr: { maxlength: RastreadorPosicionado.maxlength, name: RastreadorPosicionado.id, id: RastreadorPosicionado.id }">
                                    <label class="custom-control-label" data-bind="text: RastreadorPosicionado.text, attr: { for: RastreadorPosicionado.id }"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-2 mt-2" data-bind="visible: SomenteVeiculosAtivos.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: SomenteVeiculosAtivos.val, attr: { maxlength: SomenteVeiculosAtivos.maxlength, name: SomenteVeiculosAtivos.id, id: SomenteVeiculosAtivos.id }">
                                    <label class="custom-control-label" data-bind="text: SomenteVeiculosAtivos.text, attr: { for: SomenteVeiculosAtivos.id }"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="filters-action-buttons justify-content-end">
                            <button class="btn button-primary" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="panel mt-3 veiculo-monitoramento-container" id="veiculo-monitoramento-container">
    <div class="panel-container" id="container-veiculo-monitoramento-conteudo">
        <div class="col-10 mt-3 d-flex justify-content-end">
            <button class="btn button-outline" type="button" onclick="consultarVeiculoPorPlaca()">
                <i class="fal fa-truck" style="font-weight: 700;"></i><span style="font-weight: 700;">{Localize::Veiculos.VeiculoMonitoramento.ConsultarPlaca}</span>
            </button>
        </div>
        <div class="panel-content" id="container-grid-veiculo-monitoramento">
            <table width="100%" class="table table-bordered table-hover" id="grid-veiculo-monitoramento" cellspacing="0"></table>
        </div>
    </div>
</div>


<script src="/scripts/veiculoMonitoramento"></script>
<link rel="stylesheet" href="~/css/veiculomonitoramento">

<script type="text/javascript">
    pageSetUp();


    $(document).ready(function () {
        LoadLocalizationResources("Veiculos.VeiculoMonitoramento").then(loadVeiculoMonitoramento);
    });

</script>

