
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Transportadores</li>
    <li class="breadcrumb-item active">Perfil Acesso Transportador</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Perfil De Acesso Transportador
    </h1>
    <div class="subheader-help">
        <button type="button" onclick="iniciarAjuda(842)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
    </div>
</div>

<div id="knockoutPesquisaPerfil">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Perfis
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-8" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text"></label>
                                    <select class="form-control" data-bind="options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { id : Ativo.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel mt-3">
    <div class="panel-container">
        <div class="panel-content">
            <ul class="nav nav-tabs">
                <li class="nav-item active" id="liTabPerfil">
                    <a href="#tabPerfil" class="nav-link active" data-bs-toggle="tab">
                        <span class="hidden-mobile hidden-tablet">Perfil</span>
                    </a>
                </li>
                <li class="nav-item" id="liTabPermissoes">
                    <a href="#tabPermissoes" class="nav-link" data-bs-toggle="tab">
                        <span class="hidden-mobile hidden-tablet">Permissões</span>
                    </a>
                </li>
            </ul>

            <div id="knockoutCadastroPerfil">
                <div class="tab-content" id="myTabContent">
                    <!-- Perfil -->

                    <div class="tab-pane fade active show" id="tabPerfil">
                        <div class="row mt-3">
                            <h3 class="panel-heading">Cadastrar Perfil</h3>
                            <hr />
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-8" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, class: Descricao.requiredClass,valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Status.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Status.text"></label>
                                    <select class="form-control" data-bind="options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { id : Status.id}"></select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Permissões -->
                    <div class="tab-pane fade" id="tabPermissoes">
                        <div class="row mt-3">
                            <div class="col-6">
                                <h3 class="panel-heading">Permissões</h3>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <a href="javascript:void(0);" title="Entenda a página" style="float: right; margin-right: 20px;" onclick="iniciarAjuda(600)"><i class="fal fa-question-circle fa-lg"></i></a>
                            </div>
                            <hr />
                        </div>
                        <form id="fildPermissoes">
                            <div class="col-12 col-md-12" data-bind="visible: PerfilAdministrador.visible">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" data-bind="checked: PerfilAdministrador.val, attr: { maxlength: PerfilAdministrador.maxlength, name: PerfilAdministrador.id, id: PerfilAdministrador.id }">
                                        <label class="custom-control-label" data-bind="text: PerfilAdministrador.text, attr: { for: PerfilAdministrador.id }"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-3" style="margin-left:-6px">
                                <div class="tree" id="divTreeView" data-bind="fadeVisible: !PerfilAdministrador.val()"></div>
                            </div>
                        </form>
                    </div>
                </div>


                <footer>
                    <div class="row mt-2">
                        <div class="col-6">
                            <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                                <i class="fal fa-ban"></i><span data-bind="text: Cancelar.text"></span>
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <button type="button" class="btn btn-labeled btn-danger mx-2" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                                <i class="fal fa-trash"></i><span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                                <i class="fal fa-check"></i><span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/treeviewLoad"></script>
<script src="~/scripts/perfilAcessoTransportador"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadPerfilAcesso();
    });

</script>

