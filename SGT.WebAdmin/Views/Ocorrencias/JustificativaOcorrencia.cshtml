﻿
<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Ocorrências</li>
        <li class="breadcrumb-item active">JustificativaOcorrencia</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Justificativa da Ocorrência
        </h1>
    </div>
    <div class="panel">
        <div class="panel-container">
            <div id="JustificativaOcorrencia" class="panel-content">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-sortable="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false">
                    <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                        <i class="fal fa-search"></i> Pesquisar Justificativas da Ocorrência
                    </button>
                    <div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                        <div class="mt-3">
                            <div class="smart-form">
                                <div class="well">
                                    <div class="row">
                                        <div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
                                            <div class="form-group">
                                                <label class="form-label" data-bind="text: Descricao.text"></label>
                                                <input type="text" class="form-control" data-bind="class: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                                            <div class="form-group">
                                                <label class="form-label" data-bind="text: Ativo.text, attr: { for: Ativo.id }"></label>
                                                <select class="form-control" data-bind="class: Ativo.requiredClass, options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { maxlength: Ativo.maxlength, id : Ativo.id}"></select>
                                            </div>
                                        </div>
                                        <footer>
                                            <div class="d-flex justify-content-end mb-3">
                                                <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                                                    <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                                                </button>
                                            </div>
                                        </footer>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
            <div class="panel">
                <div class="panel-container">
                    <div class="panel-hdr">
                        <h3>
                            <i class="fal fa-edit"></i>Cadastrar Justificativa da Ocorrência
                        </h3>
                    </div>
                    <div class="panel-content">
                        <div class="widget-body no-padding" id="knockoutCadastroJustificativaOcorrencia">
                            <div class="smart-form">
                                <div class="row">
                                    <div class="col-12 col-md-9" data-bind="visible: Descricao.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Descricao.text"></label>
                                            <input type="text" class="form-control" data-bind="class: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Ativo.text, attr: { for: Ativo.id }"></label>
                                            <select class="form-control" data-bind="class: Ativo.requiredClass, options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { maxlength: Ativo.maxlength, id : Ativo.id}"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <footer class="d-flex justify-content-end" id="knockoutCRUDJustificativaOcorrencia">
                            <button type="button" class="btn btn-success ms-2" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { id : Atualizar.id}">
                                <span data-bind="text: Atualizar.text"></span>
                            </button>
                            <button type="button" class="btn btn-success ms-2" data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                                <span data-bind="text: Adicionar.text"></span>
                            </button>
                            <button type="button" class="btn btn-danger ms-2" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { id : Excluir.id}">
                                <span data-bind="text: Excluir.text"></span>
                            </button>
                            <button type="button" class="btn btn-default ms-2" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                                <span data-bind="text: Cancelar.text"></span>
                            </button>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/scripts/justificativaOcorrencia"></script>
<script type="text/javascript">
    pageSetUp();

    $(document).ready(function () {
        loadJustificativaOcorrencia();
    });
</script>
