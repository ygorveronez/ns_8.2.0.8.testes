@model Dominio.ObjetosDeValor.Embarcador.Ocorrencia.AutorizacaoOcorrenciaAprovadorView
@{
    Layout = "~/Views/Ocorrencias/OcorrenciaAprovador.cshtml";
}
<div class="smart-form">
    <fieldset class="main-fieldset">
        <header>
            <h1 class="h3">Ocorrência</h1>
        </header>
        <div class="margin-top-15">
            <div class="col col-sm-12">
                <div class="well">
                    <header></header>
                    <fieldset>
                        <div class="row">
                            <section class="col col-12">
                                <div class="alert alert-warning">
                                    @if (Model.SituacaoOcorrenciaAutorizacao == Dominio.ObjetosDeValor.Embarcador.Enumeradores.SituacaoOcorrenciaAutorizacao.Aprovada)
                                    {
                                        <strong>Ocorrência já Aprovada</strong>
                                    }
                                    @if (Model.SituacaoOcorrenciaAutorizacao == Dominio.ObjetosDeValor.Embarcador.Enumeradores.SituacaoOcorrenciaAutorizacao.Rejeitada)
                                    {
                                        <strong>Ocorrência já Reprovada</strong>
                                    }
                                    @if (Model.SituacaoOcorrenciaAutorizacao == Dominio.ObjetosDeValor.Embarcador.Enumeradores.SituacaoOcorrenciaAutorizacao.Pendente)
                                    {
                                        <script type="text/javascript">
                                            location.pathname = "";
                                            location.href = "/#GerenciadorDeConexoes/ValidarTokenAcessoOcorrencia?TOKEN_ACESSO_AUTORIZACAO_OCORRENCIA=@Model.TokenAcesso";
                                        </script>
                                    }
                                </div>
                            </section>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </fieldset>
</div>

<style>
    fieldset.main-fieldset {
        padding-top: 15px;
    }

        fieldset.main-fieldset > header {
            margin-bottom: 15px;
        }

    .questions {
    }

        .questions .question {
            background-color: #f5f5f5;
            padding: 15px;
            margin-bottom: 15px;
        }
</style>