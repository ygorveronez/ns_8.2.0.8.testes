

<section>
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Documentos</li>
        <li class="breadcrumb-item active">Autorização Pagamento CIOT Parcela</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            <i class="subheader-icon fal fa-file-alt"></i> Autorização de Pagamento do CIOT por Parcela
        </h1>
        <div class="subheader-help">
            <button type="button" onclick="iniciarAjuda(960)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
        </div>
    </div>

    <div id="knockoutAutorizacaoPagamentoCIOTParcela">
        <div class="panel">
            <div class="panel-container">
                <div class="panel-hdr">
                    <h2>Autorização de Pagamento do CIOT</h2>
                </div>
                <div class="panel-content">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-2" data-bind="visible: DataInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicial.text, attr: { for: DataInicial.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicial.maxlength, id : DataInicial.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataFinal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataFinal.text, attr: { for: DataFinal.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinal.maxlength, id : DataFinal.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: NumeroCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroCarga.text, attr: { for: NumeroCarga.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NumeroCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroCarga.maxlength, id : NumeroCarga.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Transportador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': Transportador.text, maxlength: Transportador.maxlength, id: Transportador.id, name: Transportador.id }" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: Transportador.idBtnSearch}">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: TipoPagamento.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoPagamento.text, attr: { for: TipoPagamento.id }"></label>
                                    <select class="form-control" data-bind="options: TipoPagamento.options, optionsText: 'text', optionsValue: 'value', value: TipoPagamento.val, attr: { id : TipoPagamento.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
                                    <select class="form-control" data-bind="options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { id : Situacao.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: NumeroPedidoEmbarcador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroPedidoEmbarcador.text, attr: { for: NumeroPedidoEmbarcador.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NumeroPedidoEmbarcador.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroPedidoEmbarcador.maxlength, id : NumeroPedidoEmbarcador.id}" />
                                </div>
                            </div>

                        </div>
                    </form>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel">
            <div class="panel-container">

                <div class="panel-content">
                    <div class="d-flex justify-content-end ">
                        <button class="btn btn-primary" type="button" data-bind="click: SelecionarTodos.eventClick, text: SelecionarTodos.text, attr: { id: SelecionarTodos.id}, visible: SelecionarTodos.visible"></button>
                    </div>
                    <div class="mb-2"> 
                        <table width="100%" class="table table-bordered table-hover table-condensed" data-bind="attr: { id: ListaCodigosCIOT.idGrid}" cellspacing="0"></table>
                    </div>

                    <footer>
                        <div class="row">
                            <div class="col-6">
                                <button type="button" class="btn btn-labeled btn-default" data-loading-text="Aguarde..." data-bind="click: Cancelar.eventClick, attr: { id: Cancelar.id}">
                                    <i class="fal fa-recycle"></i><span data-bind="text: Cancelar.text"></span>
                                </button>
                            </div>

                            <div class="col-6 d-flex justify-content-end">
                                <button type="button" class="btn btn-labeled btn-success " data-loading-text="Aguarde..." data-bind="click: AutorizarSaldo.eventClick, attr: { id: AutorizarSaldo.id}">
                                    <i class="fal fa-dollar-sign"></i><span data-bind="text: AutorizarSaldo.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success mx-2" data-loading-text="Aguarde..." data-bind="click: AutorizarAbastecimento.eventClick, attr: { id: AutorizarAbastecimento.id}">
                                    <i class="fal fa-dollar-sign"></i><span data-bind="text: AutorizarAbastecimento.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success " data-loading-text="Aguarde..." data-bind="click: AutorizarAdiantamento.eventClick, attr: { id: AutorizarAdiantamento.id}">
                                    <i class="fal fa-dollar-sign"></i></i><span data-bind="text: AutorizarAdiantamento.text"></span>
                                </button>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="~/scripts/autorizacaoPagamentoCIOTParcela"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        LoadAutorizacaoPagamentoCIOTParcela();
    });

</script>