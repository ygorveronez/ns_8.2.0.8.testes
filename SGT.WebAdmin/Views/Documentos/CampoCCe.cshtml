
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Documentos</li>
    <li class="breadcrumb-item">Campo CCe</li>

</ol>
<div class="subheader">
    <h1>
        Campos da Carta de Correção Eletrônica
    </h1>
</div>

<div id="knockoutPesquisaCampoCCe">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Campos da CC-e Cadastrados
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-4" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: NomeCampo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NomeCampo.text, attr: { for: NomeCampo.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: NomeCampo.val, valueUpdate: 'afterkeydown', attr: { maxlength: NomeCampo.maxlength, id : NomeCampo.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: GrupoCampo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: GrupoCampo.text, attr: { for: GrupoCampo.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: GrupoCampo.val, valueUpdate: 'afterkeydown', attr: { maxlength: GrupoCampo.maxlength, id : GrupoCampo.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Status.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Status.text, attr: { for: Status.id }"></label>
                                    <select class="form-control" data-bind="options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { id : Status.id}"></select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-end mb-3">
                            <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>

                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid }" cellspacing="0"></table>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Cadastrar Campo da CC-e
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knockoutCadastroCampoCCe">
                    <div class="col-12 col-md-4" data-bind="visible: Descricao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                            <input type="text" class="form-control" data-bind="css: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-4" data-bind="visible: NomeCampo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: NomeCampo.text, attr: { for: NomeCampo.id }"></label>
                            <input type="text" class="form-control" data-bind="css: NomeCampo.requiredClass,value: NomeCampo.val, valueUpdate: 'afterkeydown', attr: { maxlength: NomeCampo.maxlength, id : NomeCampo.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-4" data-bind="visible: GrupoCampo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: GrupoCampo.text, attr: { for: GrupoCampo.id }"></label>
                            <input type="text" class="form-control" data-bind="css: GrupoCampo.requiredClass,value: GrupoCampo.val, valueUpdate: 'afterkeydown', attr: { maxlength: GrupoCampo.maxlength, id : GrupoCampo.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: IndicadorRepeticao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: IndicadorRepeticao.text, attr: { for: IndicadorRepeticao.id }"></label>
                            <select class="form-control" data-bind="options: IndicadorRepeticao.options, optionsText: 'text', optionsValue: 'value', value: IndicadorRepeticao.val, attr: { id : IndicadorRepeticao.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: TipoCampo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: TipoCampo.text, attr: { for: TipoCampo.id }"></label>
                            <select class="form-control" data-bind="options: TipoCampo.options, optionsText: 'text', optionsValue: 'value', value: TipoCampo.val, attr: { id : TipoCampo.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: QuantidadeCaracteres.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: QuantidadeCaracteres.text, attr: { for: QuantidadeCaracteres.id }"></label>
                            <input type="text" class="form-control" data-bind="value: QuantidadeCaracteres.val, valueUpdate: 'afterkeydown', attr: { maxlength: QuantidadeCaracteres.maxlength, id : QuantidadeCaracteres.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: QuantidadeInteiros.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: QuantidadeInteiros.text, attr: { for: QuantidadeInteiros.id }"></label>
                            <input type="text" class="form-control" data-bind="value: QuantidadeInteiros.val, valueUpdate: 'afterkeydown', attr: { maxlength: QuantidadeInteiros.maxlength, id : QuantidadeInteiros.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: QuantidadeDecimais.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: QuantidadeDecimais.text, attr: { for: QuantidadeDecimais.id }"></label>
                            <input type="text" class="form-control" data-bind="value: QuantidadeDecimais.val, valueUpdate: 'afterkeydown', attr: { maxlength: QuantidadeDecimais.maxlength, id : QuantidadeDecimais.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: Status.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Status.text, attr: { for: Status.id }"></label>
                            <select class="form-control" data-bind="options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { id : Status.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: TipoCampoCCeAutomatica.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: TipoCampoCCeAutomatica.text, attr: { for: TipoCampoCCeAutomatica.id }"></label>
                            <select class="form-control" data-bind="class: TipoCampoCCeAutomatica.requiredClass, options: TipoCampoCCeAutomatica.options, optionsText: 'text', optionsValue: 'value', value: TipoCampoCCeAutomatica.val, attr: { maxlength: TipoCampoCCeAutomatica.maxlength, id : TipoCampoCCeAutomatica.id}"></select>
                        </div>
                    </div>
                    <footer>
                        <div class="row">
                            <div class="col-6">
                                <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                                    <i class="fal fa-ban"></i>
                                    <span data-bind="text: Cancelar.text"></span>
                                </button>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { id : Atualizar.id}">
                                    <i class="fal fa-check"></i>
                                    <span data-bind="text: Atualizar.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="visible: Adicionar.visible, click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                                    <span data-bind="text: Adicionar.text"></span>
                                </button>
                            </div>
                        </div>
                    </footer>
                </div>

            </form>

        </div>
    </div>

</div>
</div>


<script src="~/scripts/campoCCe"></script>
<script type="text/javascript">
    pageSetUp();

    var _ativarGeracaoCCePelaRolagemWS = @Html.Raw(ViewBag.AtivarGeracaoCCePelaRolagemWS);

    $(document).ready(function () {
        loadCampoCCe();
    });

</script>
