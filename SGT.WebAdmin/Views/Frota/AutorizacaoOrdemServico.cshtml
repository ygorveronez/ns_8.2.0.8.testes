<div id="knockoutPesquisaOrdemServico">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h2>Pesquisar Ordem de Serviço</h2>
            </div>
            <div class="panel-content">
                <form>
                    <div class="row">
                        <div class="col-4 col-md-3">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Numero.text, attr: { for: Numero.id }"></label>
