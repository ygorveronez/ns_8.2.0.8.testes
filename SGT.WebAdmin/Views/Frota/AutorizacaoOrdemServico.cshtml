                                        <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="enable : Fornecedor.enable, attr: { id: Fornecedor.idBtnSearch}">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-6 col-md-4" data-bind="visible: Operador.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Operador.text, attr: { for: Operador.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="class: Operador.requiredClass, value: Operador.val, enable: Operador.enable, attr: { maxlength: Operador.maxlength, id: Operador.id}, event: { blur: Operador.eventChange }, valueUpdate: 'afterkeydown'" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="enable : Operador.enable, attr: { id: Operador.idBtnSearch}">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-6 col-md-4" data-bind="visible: Usuario.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Usuario.text, attr: { for: Usuario.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="class: Usuario.requiredClass, value: Usuario.val, enable: Usuario.enable, attr: { maxlength: Usuario.maxlength, id: Usuario.id}, event: { blur: Usuario.eventChange }, valueUpdate: 'afterkeydown'" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="enable : Usuario.enable, attr: { id: Usuario.idBtnSearch}">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                        <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>Ordem Serviço</h3>
            </div>
            <div class="panel-content">
