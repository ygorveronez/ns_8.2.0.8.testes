
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Compras</li>
    <li class="breadcrumb-item active">Cotação Compra</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Cotação de Compra
    </h1>
    <div class="subheader-help">
        <button type="button" onclick="iniciarAjuda(1742)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
    </div>
</div>

<div id="knockoutPesquisaCotacao">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Motivos de Cancelamento
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-2" data-bind="visible: Numero.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Numero.text"></label>
                                    <input type="text" class="form-control" data-bind="value: Numero.val, valueUpdate: 'afterkeydown', attr: { maxlength: Numero.maxlength, id : Numero.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataEmissaoDe.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataEmissaoDe.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataEmissaoDe.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataEmissaoDe.maxlength, id : DataEmissaoDe.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataEmissaoAte.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataEmissaoAte.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataEmissaoAte.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataEmissaoAte.maxlength, id : DataEmissaoAte.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Fornecedor.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Fornecedor.text, attr: { for: Fornecedor.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Fornecedor.requiredClass, value: Fornecedor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Fornecedor.maxlength, id : Fornecedor.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Fornecedor.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataRetornoDe.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataRetornoDe.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataRetornoDe.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataRetornoDe.maxlength, id : DataRetornoDe.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataRetornoAte.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataRetornoAte.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataRetornoAte.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataRetornoAte.maxlength, id : DataRetornoAte.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Produto.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Produto.text, attr: { for: Produto.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Produto.requiredClass, value: Produto.val, valueUpdate: 'afterkeydown', attr: { maxlength: Produto.maxlength, id : Produto.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Produto.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text"></label>
                                    <select class="form-control" data-bind="options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { id : Situacao.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-info waves-effect waves-themed" data-bind="visible: ImportarRequisicao.visible, enable: ImportarRequisicao.enable, attr: { id : ImportarRequisicao.idBtnSearch}" type="button">
                            <i class="fal fa-copy"></i><span data-bind="text: ImportarRequisicao.text"></span>
                        </button>
                        <button class="btn btn-success waves-effect waves-themed mx-3" data-bind="click: NovaCotacao.eventClick, attr: { id: NovaCotacao.id}" type="button">
                            <i data-bind="attr: { class: NovaCotacao.icon}" class="fal fa-plus"></i><span data-bind="text: NovaCotacao.text"></span>
                        </button>
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>
                            
<div id="ModaisCotacao">
</div>

<script src="~/scripts/cotacaoCompra"></script>
<script type="text/javascript">
    pageSetUp();

    $(document).ready(function () {
        loadCotacaoCompra();
    });

</script>

