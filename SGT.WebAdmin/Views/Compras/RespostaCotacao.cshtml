
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Compras</li>
    <li class="breadcrumb-item active">Resposta Cotação</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Retorno dos Produtos da Cotação
    </h1>
</div>

<div id="knockoutPesquisaRespostaCotacao">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Retorno dos Produtos da Cotação
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel" id="wid-id-4" style="display:none;">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Retorno dos Produtos da Cotação
            </h3>
        </div>
        <div class="panel-content">
            <form id="knockoutRespostaCotacao">
                <div class="row">
                    <div class="form-group">
                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: {id: Produtos.id}" cellspacing="0"></table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-3" data-bind="visible: DataPrevisaoEntrega.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataPrevisaoEntrega.text"></label>
                            <input type="text" class="form-control" data-bind="value: DataPrevisaoEntrega.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataPrevisaoEntrega.maxlength, id : DataPrevisaoEntrega.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-3" data-bind="visible: CondicaoPagamento.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: CondicaoPagamento.text, attr: { for: CondicaoPagamento.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: CondicaoPagamento.requiredClass, value: CondicaoPagamento.val, valueUpdate: 'afterkeydown', attr: { maxlength: CondicaoPagamento.maxlength, id : CondicaoPagamento.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: CondicaoPagamento.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-md-6" data-bind="visible: Observacao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Observacao.text, attr: { for: Observacao.id }"></label>
                            <textarea class="form-control" rows="5" data-bind="value: Observacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Observacao.maxlength, id : Observacao.id}"></textarea>
                        </div>
                    </div>
                </div>
                <footer>
                    <div class="row">
                        <div class="col-12">
                            <div class="col-12 d-flex justify-content-end">
                                <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Salvar.eventClick, visible: Salvar.visible, attr: { value: Salvar.text, id : Salvar.id}">
                                    <span data-bind="text: Salvar.text"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="~/scripts/respostaCotacao"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRespostaCotacao();
    });

</script>