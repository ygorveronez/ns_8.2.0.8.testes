
<section id="widget-grid">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Torre de controle</li>
        <li class="breadcrumb-item active">Regras de qualidade do Monitoramento</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            <i class="subheader-icon fal fa-file"></i> Regras de qualidade do Monitoramento
        </h1>
    </div>

    <div id="knockoutPesquisaRegrasQualidadeMonitoramento" class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Regras de Qualidade do Monitoramento
                </button>

                <div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form class="mt-3">
                        <div class="row">
                            <div class="col-12 col-md-4" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: TipoRegra.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoRegra.text, attr: { for: TipoRegra.id }"></label>
                                    <select class="form-control" data-bind="class: TipoRegra.requiredClass, options: TipoRegra.options, optionsText: 'text', optionsValue: 'value', value: TipoRegra.val, attr: { maxlength: TipoRegra.maxlength, id : TipoRegra.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: Status.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Status.text, attr: { for: Status.id }"></label>
                                    <select class="form-control" data-bind="class: Status.requiredClass, options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { maxlength: Status.maxlength, id : Status.id}"></select>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-end my-3">
                        <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                            <i class="fal fa-search"></i> <span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <ul class="nav nav-tabs">
                    <li id="litabRegraQualidadeMonitoramento" class="nav-item">
                        <a href="#tabCadastroRegraQualidadeMonitoramento" class="nav-link active" data-bs-toggle="tab">
                            <i class="fal fa-edit"></i> <span class="hidden-mobile hidden-tablet">Cadastro de regra </span>
                        </a>
                    </li>
                </ul>
                <div class="tab-content border border-top-0 p-3">
                    <div class="tab-pane fade active show" id="tabCadastroRegraQualidadeMonitoramento">
                        <h3>Cadastrar Regra</h3>
                        <form id="knockoutRegraQualidadeMonitoramento">
                            <div class="row">
                                <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                        <input type="text" class="form-control" data-bind="value: Descricao.val, required: Descricao.required, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-3" data-bind="visible: TipoRegra.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: TipoRegra.text, attr: { for: TipoRegra.id }"></label>
                                        <select class="form-control" data-bind="class: TipoRegra.requiredClass, required: TipoRegra.required, options: TipoRegra.options, optionsText: 'text', optionsValue: 'value', value: TipoRegra.val, attr: { maxlength: TipoRegra.maxlength, id : TipoRegra.id}"></select>
                                    </div>
                                </div>
                                <div class="col-12 col-md-3" data-bind="visible: Status.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Status.text, attr: { for: Status.id }"></label>
                                        <select class="form-control" data-bind="options: Status.options, optionsText: 'text', optionsValue: 'value', value: Status.val, attr: { id : Status.id}"></select>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="knockoutCRUDRegraQualidadeMonitoramento" class="d-flex justify-content-end mt-3">
                        <button class="btn btn-default ms-2" type="button" data-bind="click: Cancelar.eventClick, text: Cancelar.text, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}"></button>
                        <button class="btn btn-success ms-2" type="button" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick,visible: Adicionar.visible, text: Adicionar.text, attr: { id : Adicionar.id}"></button>
                        <button class="btn btn-success ms-2" type="button" data-bind="click: Atualizar.eventClick,visible: Atualizar.visible, text: Atualizar.text, attr: { id : Atualizar.id}"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/scripts/regraQualidadeMonitoramento"></script>

<script type="text/javascript">
    pageSetUp();

    $(document).ready(function () {
        loadRegrasQualidadeMonitoramento();
    });

</script>

