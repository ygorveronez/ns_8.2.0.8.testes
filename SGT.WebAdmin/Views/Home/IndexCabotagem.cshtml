@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage


<div id="inicial" class="row">
    <div class="col-12 col-md-7 col-lg-8">
        <div class="panel">
            <div class="panel-hdr">
                <h2>@ViewBag.DataAtual</h2>
            </div>
            <div class="panel-container" id="knockoutMensagemAviso">
                <div class="panel-content">
                    <div class="row flex-column-reverse flex-md-row">
                        <div class="col-12 col-md-7">
                            <h1 class="mb-4">@ViewBag.Saudacao</h1>
                            <!-- ko foreach: Mensagens -->
                            <div class="alert alert-info mb-3" role="alert">
                                <div class="d-flex align-items-center">
                                    <img src="~/img/icon-alert.png" alt="Ícone alerta" aria-hidden="true" />
                                    <div class="ms-0 ms-lg-3 mt-3 mt-lg-0">
                                        <div class="flex-1">
                                            <span class="h4 fw-500" data-bind="text: Titulo.val"></span>
                                            <br />
                                            <span data-bind="html: Mensagem.val"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /ko -->
                        </div>
                        <div class="col-12 col-md-5">
                            <div class="logo">
                                <img src="~/img/icon-alianca.png" alt="Logo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel transparent" id="knockoutDashboardDocumentacao" style="display: none">
            <div class="panel-hdr">
                <div class="panel-hdr-icon">
                    <i class="fal fa-home"></i>
                </div>
                <h2>Dashboard Documentação</h2>
            </div>
            <div class="panel-container">
                <div class="panel-content">
                    <div class="row">
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios fechados</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-fechado.png" alt="Navios Fechados" />
                                    </div>
                                    <h4 class="dashboard-data--number"><span data-bind="text: QuantidadeNavioFechado.val"></span></h4>
                                </div>
                                <div class="dashboard-info">
                                    <p>Data de fechamento</p>
                                    <p><b><span data-bind="text: DataInicial.val"></span></b> até <b><span data-bind="text: DataFinal.val"></span></b></p>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios abertos</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-aberto.png" alt="Navios Abertos" />
                                    </div>
                                    <h4 class="dashboard-data--number"><span data-bind="text: QuantidadeNavioAberto.val"></span></h4>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard acessar">
                                <div class="acessar-icon">
                                    <img src="~/img/icon-acessar-dashboard.png" />
                                </div>
                                <button type="button" class="btn btn-default ms-1" data-loading-text="Aguarde..." data-bind="click: Acessar.eventClick, visible: Acessar.visible, attr: { value: Acessar.text, id : Acessar.id}">
                                    Acessar o Dashboard
                                </button>
                                <div class="btn-group" style="display: none">
                                    <button class="btn btn-outline-secondary dropdown-toggle waves-effect waves-themed" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Selecione a região
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Sul</a>
                                        <a class="dropdown-item" href="#">Sudeste</a>
                                        <a class="dropdown-item" href="#">Centro-Oeste</a>
                                        <a class="dropdown-item" href="#">Norte</a>
                                        <a class="dropdown-item" href="#">Nordeste</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel transparent" style="display: none">
            <div class="panel-hdr">
                <div class="panel-hdr-icon">
                    <i class="fal fa-home"></i>
                </div>
                <h2>Dashboard Gerencial</h2>
            </div>
            <div class="panel-container">
                <div class="panel-content">
                    <div class="row">
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios fechados</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-fechado.png" alt="Navios Fechados" />
                                    </div>
                                    <h4 class="dashboard-data--number">0</h4>
                                </div>
                                <div class="dashboard-info">
                                    <p>Data de fechamento</p>
                                    <p><b>01/05/2023</b> até <b>15/05/2023</b></p>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios abertos</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-aberto.png" alt="Navios Abertos" />
                                    </div>
                                    <h4 class="dashboard-data--number">5</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard acessar">
                                <div class="acessar-icon">
                                    <img src="~/img/icon-acessar-dashboard.png" />
                                </div>
                                <button type="button" class="btn btn-default ms-1" data-loading-text="Aguarde...">
                                    Acessar o Dashboard
                                </button>
                                <div class="btn-group" style="display: none">
                                    <button class="btn btn-outline-secondary dropdown-toggle waves-effect waves-themed" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Selecione a região
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Sul</a>
                                        <a class="dropdown-item" href="#">Sudeste</a>
                                        <a class="dropdown-item" href="#">Centro-Oeste</a>
                                        <a class="dropdown-item" href="#">Norte</a>
                                        <a class="dropdown-item" href="#">Nordeste</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel transparent" style="display: none">
            <div class="panel-hdr">
                <div class="panel-hdr-icon">
                    <i class="fal fa-home"></i>
                </div>
                <h2>Dashboard Feeder</h2>
            </div>
            <div class="panel-container">
                <div class="panel-content">
                    <div class="row">
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios fechados</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-fechado.png" alt="Navios Fechados" />
                                    </div>
                                    <h4 class="dashboard-data--number">1</h4>
                                </div>
                                <div class="dashboard-info">
                                    <p>Data de fechamento</p>
                                    <p><b>01/05/2023</b> até <b>15/05/2023</b></p>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard">
                                <h3 class="dashboard-title">Navios abertos</h3>
                                <div class="dashboard-data">
                                    <div class="dashboard-data--item">
                                        <img src="~/img/icon-navio-aberto.png" alt="Navios Abertos" />
                                    </div>
                                    <h4 class="dashboard-data--number">2</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col mb-2">
                            <div class="dashboard acessar">
                                <div class="acessar-icon">
                                    <img src="~/img/icon-acessar-dashboard.png" />
                                </div>
                                <button type="button" class="btn btn-default ms-1" data-loading-text="Aguarde...">
                                    Acessar o Dashboard
                                </button>

                                <div class="btn-group" style="display: none">
                                    <button class="btn btn-outline-secondary dropdown-toggle waves-effect waves-themed" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Selecione a região
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Sul</a>
                                        <a class="dropdown-item" href="#">Sudeste</a>
                                        <a class="dropdown-item" href="#">Centro-Oeste</a>
                                        <a class="dropdown-item" href="#">Norte</a>
                                        <a class="dropdown-item" href="#">Nordeste</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-5 col-lg-4" id="knockoutAcessoRapido">
        <div class="panel">
            <div class="panel-hdr">
                <h2>Acesso rápido</h2>
            </div>
            <div class="panel-container">
                <!-- ko if: Modulos().length > 0 -->
                <div class="panel-content" data-bind="foreach: Modulos">
                    <div class="acesso-rapido mb-3">
                        <h3 class="acesso-rapido-titulo" data-bind="text: Descricao"></h3>
                        <ul data-bind="foreach: Formularios">
                            <li>
                                <a data-bind="attr: {href: '#' + Caminho, title: Descricao}" class="acesso">
                                    <div class="acesso-icon">
                                        <i data-bind="css: 'fal ' + (Icone || 'fa-window')"></i>
                                    </div>
                                    <h4 class="acesso-title" data-bind="html: Descricao"></h4>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- /ko -->
                <!-- ko if: Modulos().length == 0 -->
                <div class="panel-content">
                    <div class="acesso-rapido">
                        <h3 class="acesso-rapido-titulo">Nenhum acesso rápido configurado.</h3>
                    </div>
                </div>
                <!-- /ko -->
            </div>
        </div>
    </div>
</div>

<div id="divModalAvisoMensagem"></div>

<script src="~/scripts/home"></script>

<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        LoadLocalizationResources("Gerais.Home").then(LoadHome());
    });

</script>
