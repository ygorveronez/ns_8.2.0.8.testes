
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Logística</li>
    <li class="breadcrumb-item active">Pesagem</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        Pesagens
    </h1>
</div>

<div id="knockoutPesquisaPesagem">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <div class="panel-hdr">
                    <h3>
                        <i class="fal fa-edit"></i>
                            Pesquisar Pesagens
                    </h3>
                </div>

                <div class="mt-3" >
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-2" data-bind="visible: DataPesagemInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataPesagemInicial.text, attr: { for: DataPesagemInicial.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataPesagemInicial.requiredClass, value: DataPesagemInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataPesagemInicial.maxlength, id : DataPesagemInicial.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataPesagemFinal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataPesagemFinal.text, attr: { for: DataPesagemFinal.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataPesagemFinal.requiredClass, value: DataPesagemFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataPesagemFinal.maxlength, id : DataPesagemFinal.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: CodigoPesagem.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: CodigoPesagem.text, attr: { for: CodigoPesagem.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: CodigoPesagem.requiredClass, value: CodigoPesagem.val, valueUpdate: 'afterkeydown', attr: { maxlength: CodigoPesagem.maxlength, id : CodigoPesagem.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: NumeroCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroCarga.text, attr: { for: NumeroCarga.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroCarga.requiredClass, value: NumeroCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroCarga.maxlength, id : NumeroCarga.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: StatusBalanca.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: StatusBalanca.text, attr: { for: StatusBalanca.id }"></label>
                                    <select class="form-control" data-bind="class: StatusBalanca.requiredClass, options: StatusBalanca.options, optionsText: 'text', optionsValue: 'value', value: StatusBalanca.val, attr: { maxlength: StatusBalanca.maxlength, id : StatusBalanca.id}"></select>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-4" data-bind="visible: Veiculo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Veiculo.text, attr: { for: Veiculo.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Veiculo.requiredClass, value: Veiculo.val, valueUpdate: 'afterkeydown', attr: { maxlength: Veiculo.maxlength, id : Veiculo.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Veiculo.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Transportador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-4" data-bind="visible: Motorista.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Motorista.text, attr: { for: Motorista.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Motorista.requiredClass, value: Motorista.val, valueUpdate: 'afterkeydown', attr: { maxlength: Motorista.maxlength, id : Motorista.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Motorista.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ModaisPesagem"></div>

<script src="~/scripts/fluxoPatioPesagem"></script>

<script src="~/scripts/pesagem"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadPesagem();
    });

</script>