<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Logística</li>
    <li class="breadcrumb-item active">Acompanhamento de Checklist</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Acompanhamento de Checklist
    </h1>
    <div class="subheader-help">
        <button type="button" onclick="iniciarAjuda(1030)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
    </div>
</div>

<div id="knockoutPesquisaAcompanhamentoChecklist">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-default waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-filter"></i> <span>Pesquisar Acompanhamentos de Checklists</span>
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">

                            <div class="col-12 col-md-6" data-bind="visible: Filial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Filial.text "></label>
                                    <div class="input-group">
                                        <input type="text" data-bind="css: Filial.requiredClass, value: Filial.val, valueUpdate: 'afterkeydown', attr: { maxlength: Filial.maxlength, id : Filial.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: Filial.idBtnSearch}">
                                                <i class="fal fa-search"></i> &nbsp; Buscar &nbsp;
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-4" data-bind="visible: TipoOperacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoOperacao.text, attr: { for: TipoOperacao.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="value: TipoOperacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoOperacao.maxlength, id : TipoOperacao.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoOperacao.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-2" data-bind="visible: DataCarregamento.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataCarregamento.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataCarregamento.val, attr: { maxlength: DataCarregamento.maxlength, id : DataCarregamento.id} , valueUpdate: 'afterkeydown'" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-4" data-bind="visible: Transportador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
                                    <select class="form-control" data-bind="class: Situacao.requiredClass, options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { maxlength: Situacao.maxlength, id : Situacao.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Carga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Carga.text, attr: { for: Carga.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="value: Carga.val, valueUpdate: 'afterkeydown', attr: { maxlength: Carga.maxlength, id : Carga.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Carga.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel" id="knockoutPesquisaAcompanhamentoChecklist">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-edit"></i>
                    Acompanhamentos de Checklists
                </h3>
            </div>
            <div class="panel-content">

                <table width="100%" id="grid-acompanhamento-checklist" class="table table-bordered" cellspacing="0"></table>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="divModalGerenciarAnexosChecklist" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Localization.Resources.Gerais.Geral.Anexos</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="knockoutCadastroAnexosChecklist">
                <h4>@Localization.Resources.Gerais.Geral.ArquivosAnexados</h4>
                <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id : Anexos.idGrid}"></table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="divModalAcompanhamentoChecklist" role="dialog" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Detalhes Checklist</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>

            <div class="modal-body pt-0" id="knockoutChecklist">
                <ul class="nav nav-tabs">
                    <li class="nav-item" data-bind="visible: ChecklistVeiculo1.visible">
                        <a href="#knoutVeiculo1" class="nav-link active" data-bs-toggle="tab" aria-expanded="true">
                            <i class="fal fa-cube"></i>
                            <span class="hidden-mobile hidden-tablet" data-bind="text: ChecklistVeiculo1.val"></span>
                        </a>
                    </li>
                    <li class="nav-item" data-bind="visible: ChecklistVeiculo2.visible">
                        <a href="#knoutVeiculo2" class="nav-link" data-bs-toggle="tab" aria-expanded="true">
                            <i class="fal fa-cube"></i>
                            <span class="hidden-mobile hidden-tablet" data-bind="text: ChecklistVeiculo2.val"></span>
                        </a>
                    </li>
                    <li class="nav-item" data-bind="visible: ChecklistVeiculo3.visible">
                        <a href="#knoutVeiculo3" class="nav-link" data-bs-toggle="tab" aria-expanded="true">
                            <i class="fal fa-cube"></i>
                            <span class="hidden-mobile hidden-tablet" data-bind="text: ChecklistVeiculo3.val"></span>
                        </a>
                    </li>
                </ul>

                <div class="tab-content border border-top-0 p-3">
                    <div id="knoutVeiculo1" class="tab-pane active">
                        <div class="row" id="divChecklistCarga1">

                        </div>
                    </div>

                    <div id="knoutVeiculo2" class="tab-pane fade">
                        <div class="row" id="divChecklistCarga2">

                        </div>
                    </div>

                    <div id="knoutVeiculo3" class="tab-pane fade">
                        <div class="row" id="divChecklistCarga3">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/acompanhamentoChecklist"></script>
<script src="~/scripts/fullCalendar"></script>
<script type="text/javascript">

    pageSetUp();

    $("body").addClass("minified");
    $(document).ready(function () {
        loadAcompanhamentoChecklist();
    });

</script>

<link rel="stylesheet" href="~/css/fullCalendar" />
<link rel="stylesheet" href="~/css/legacy" />

