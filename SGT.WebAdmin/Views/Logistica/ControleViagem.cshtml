

<style>
    span.disable {
        background-color: #DDD;
        opacity: 0.5;
    }
</style>
<section id="widget-grid">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Logística</li>
        <li class="breadcrumb-item active">Controle de Pré Viagem</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            <i class="subheader-icon fal fa-clipboard-list"></i> Controle de Pré Viagem
        </h1>
    </div>

    <div id="knockoutPesquisaControleViagem">
        <div class="panel">
            <div class="panel-container">
                <div class="panel-content">
                    <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                        <i class="fal fa-search"></i>
                        Pesquisar
                    </button>
                    <div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                        <form class="mt-3">
                            <div class="row">
                                <div class="col-12 col-sm-6 col-md-2" data-bind="visible: DataInicialCarga.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: DataInicialCarga.text, attr: { for: DataInicialCarga.id }"></label>
                                        <input type="text" class="form-control" data-bind="value: DataInicialCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicialCarga.maxlength, id : DataInicialCarga.id}" />
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-md-2" data-bind="visible: DataFinalCarga.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: DataFinalCarga.text, attr: { for: DataFinalCarga.id }"></label>
                                        <input type="text" class="form-control" data-bind="value: DataFinalCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalCarga.maxlength, id : DataFinalCarga.id}" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-4" data-bind="visible: Filial.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Filial.text, attr: { for: Filial.id }"></label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" data-bind="value: Filial.val, valueUpdate: 'afterkeydown', attr: { maxlength: Filial.maxlength, id : Filial.id}" />
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" data-bind="attr: { id: Filial.idBtnSearch}">
                                                    <i class="fal fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4" data-bind="visible: Transportador.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" data-bind="value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" data-bind="attr: { id: Transportador.idBtnSearch}">
                                                    <i class="fal fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4" data-bind="visible: Veiculo.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Veiculo.text, attr: { for: Veiculo.id }"></label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" data-bind="value: Veiculo.val, valueUpdate: 'afterkeydown', attr: { maxlength: Veiculo.maxlength, id : Veiculo.id}" />
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" data-bind="attr: { id: Veiculo.idBtnSearch}">
                                                    <i class="fal fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4" data-bind="visible: StatusViagem.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: StatusViagem.text, attr: { for: StatusViagem.id }"></label>
                                        <select class="form-control" data-bind="options: StatusViagem.options, optionsText: 'text', optionsValue: 'value', selectedOptions: StatusViagem.val, attr: { id : StatusViagem.id}" multiple="multiple" data-actions-box="false" data-selected-text-format="count > 1" title="Nenhum"></select>
                                    </div>
                                </div>
                                <div class="col-12 col-md-4" data-bind="visible: Cliente.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" data-bind="value: Cliente.val, enable: Cliente.enable, valueUpdate: 'afterkeydown', attr: { maxlength: Cliente.maxlength, id : Cliente.id}" />
                                            <div class="input-group-append">
                                                <button class="btn btn-primary" type="button" data-bind="enable: Cliente.enable, attr: { id: Cliente.idBtnSearch}">
                                                    <i class="fal fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex justify-content-end">
                                        <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                                            <i class="fal fa-search"></i> <span data-bind="text: Pesquisar.text"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="controle-viagem-container" class="panel">
        <div id="container-controle-viagem-conteudo" class="panel-container">
            <div class="panel-hdr">
                <h2><i class="fal fa-truck"></i> Viagens</h2>
            </div>
            <div class="panel-content">
                <ul id="knockoutPlayerControleViagem" class="list-inline mb-3">
                    <li class="list-inline-item">
                        <button class="btn btn-xs btn-default btn-icon" data-bind="click: Play.eventClick, attr: { id: Play.id}">
                            <i class="fal fa-play"></i>
                        </button>
                    </li>
                    <li class="list-inline-item">
                        <button class="btn btn-xs btn-default btn-icon" data-bind="click: Pause.eventClick, attr: { id: Pause.id}">
                            <i class="fal fa-pause"></i>
                        </button>
                    </li>
                    <li class="list-inline-item">
                        <button class="btn btn-xs btn-default btn-icon" data-bind="click: Refresh.eventClick, attr: { id: Refresh.id}">
                            <i class="fal fa-redo"></i>
                        </button>
                    </li>
                    <li class="list-inline-item">
                        Atualiza em <span class="count-seconds">X</span> segundos
                    </li>
                </ul>
                <div id="container-grid-controle-viagem">
                    <table width="100%" class="table table-bordered table-hover table-condensed" id="grid-controle-viagem" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="divModalMapa" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Visualizar no mapa <span class="title-carga-codigo-embarcador"></span> - <span class="title-carga-placa"></span></h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="DetalhesMapa">
                <div class="legenda-rotas-container">
                    <strong>Rotas</strong>
                    <ul id="legenda-rotas-mapa" class="legenda">
                        <li class="rota-planejada"><span class="linha"></span><span class="descricao">Planejada</span><span class="distancia"></span></li>
                        <li class="rota-ate-origem"><span class="linha"></span><span class="descricao">Até origem</span><span class="distancia"></span></li>
                        <li class="rota-ate-destino"><span class="linha"></span><span class="descricao">Até destino</span><span class="distancia"></span></li>
                        <li class="rota-realizada"><span class="linha"></span><span class="descricao">Realizada</span><span class="distancia"></span></li>
                    </ul>
                </div>
                <div id="map" style="width:100%;height:600px;"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/controleViagem"></script>
<script src="~/scripts/tracking"></script>

<link rel="stylesheet" href="~/css/tracking" />

<script type="text/javascript">
    pageSetUp();
    if (!$("body").hasClass("menu-on-top"))
        $("body").addClass("minified");
    $(document).ready(function () {
        loadControleViagem();
    });
</script>
