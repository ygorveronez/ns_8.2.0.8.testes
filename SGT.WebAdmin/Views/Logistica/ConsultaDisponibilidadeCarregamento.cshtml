
<section id="widget-grid">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Logística</li>
        <li class="breadcrumb-item active">Consulta Disponibilidade Carregamento</li>
    </ol>

    <div class="subheader">
        <h1 class="subheader-title">
            <i class=""></i> Consulta de Disponibilidade
        </h1>
        <div class="subheader-help">
            <button type="button" onclick="iniciarAjuda(1030)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
        </div>
    </div>

    <div id="knockoutPesquisaConsultaDisponibilidadeCarregamento">
        <div class="panel">
            <div class="panel-container">
                <div class="panel-content">
                    <button class="btn btn-default waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                        <i class="fal fa-filter"></i> <span>Pesquisar Cargas</span>
                    </button>

                    <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                        <form>
                            <div class="row">
                                <div class="col-12 col-md-6" data-bind="visible: CentroCarregamento.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: CentroCarregamento.text, attr: { for: CentroCarregamento.id }"></label>
                                        <div class="input-group">
                                            <input type="text" class="form-control" data-bind="css: CentroCarregamento.requiredClass, value: CentroCarregamento.val, valueUpdate: 'afterkeydown', attr: { maxlength: CentroCarregamento.maxlength, id : CentroCarregamento.id}" />
                                            <div class="input-group-append">
                                                <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: CentroCarregamento.idBtnSearch}" type="button" aria-label="Buscar">
                                                    <i class="fal fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6" data-bind="visible: DataCarregamento.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: DataCarregamento.text"></label>
                                        <input type="text" class="form-control" data-bind="value: DataCarregamento.val, attr: { maxlength: DataCarregamento.maxlength, id : DataCarregamento.id} , valueUpdate: 'afterkeydown'" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="d-flex align-items-center justify-content-end">
                            <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-none" id="divGeralCarregamento">
        <div class="legends mb-3">
            <span><b>Legendas:</b> </span>
            <div class="badge legend green">
                <b>Há Cargas disponíveis</b>
            </div>
            <div class="badge legend red">
                <b>Não há Cargas disponíveis</b>
            </div>
        </div>

        <div class="panel">
            <div class="panel-container">
                <div class="panel-content">
                    <div id="tabDisponibilidadeCarregamento">
                        <form>
                            <div id="divContainerDisponibilidadeCarregamento"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="divModalDetalhesEmReserva" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Informações das Cargas em Reserva</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="knockoutDetalhesEmReserva">
                <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Detalhes.idGrid}" cellspacing="0"></table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="divModalDetalhesReserva" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Informações da Reserva</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="knockoutDetalhesReserva">
                <ul class="nav nav-tabs">
                    <li class="nav-item active">
                        <a href="#divReservas" class="nav-link active" data-bs-toggle="tab">
                            <span class="hidden-mobile hidden-tablet">Reservas</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#divCargasReservadas" class="nav-link" data-bs-toggle="tab">
                            <span class="hidden-mobile hidden-tablet">Cargas Reservadas</span>
                        </a>
                    </li>
                </ul>

                <div class="tab-content border border-top-0 p-3">

                    <!-- Reservas -->
                    <div class="tab-pane fade active show" id="divReservas">
                        <div class="row">
                            <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Detalhes.idGrid}" cellspacing="0"></table>
                        </div>
                    </div>

                    <!-- Cargas Reservadas -->
                    <div class="tab-pane fade" id="divCargasReservadas">
                        <div class="row">
                            <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: CargasReserva.idGrid}" cellspacing="0"></table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/template" class="templateRota">
    <div class="card mb-3" id="divRota_{{Codigo}}">
        <div class="card-header">
            <h4 class="card-title">{{Descricao}}</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col fc-disponibilidades" id="divCalendarioRota_{{Codigo}}"></div>
            </div>
        </div>
    </div>
</script>

<script type="text/template" class="templateTabela">
    <div class="scrollable tabela-container">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th width="28%" data-toggle="tooltip" title="Veículo">Veículo</th>
                    <th width="12%" data-toggle="tooltip" title="Total Disponível">TD</th>
                    <th width="12%" data-toggle="tooltip" title="Ocupadas">O</th>
                    @*<th width="12%" data-toggle="tooltip" title="Reservadas">R</th>*@
                    <th width="12%" data-toggle="tooltip" title="Em Reservas">ER</th>
                    <th width="12%" data-toggle="tooltip" title="Reservadas para Clientes">RC</th>
                    <th width="12%" data-toggle="tooltip" title="Livres">L</th>
                </tr>
            </thead>
            <tbody>
                {{Body}}
            </tbody>
        </table>
    </div>
</script>

<script type="text/template" class="templateBodyTabela">
    <tr class="{{CssSituacao}}">
        <td><b>{{Descricao}}</b></td>
        <td class="text-center">{{QuantidadeCargas}}</td>
        <td class="text-center">{{Ocupadas}}</td>
        @*<td class="text-center">{{Reservadas}}</td>*@
        <td class="text-center"><a href="#" data-reserva="{{Data}}" data-rota="{{Rota}}" data-previsao="{{PrevisaoCarregamento}}">{{EmReservas}}</a></td>
        <td class="text-center"><a href="#" data-dia="{{Data}}" data-previsao="{{PrevisaoCarregamento}}">{{ReservasDeGrupo}}</a></td>
        <td class="text-center">{{Livres}}</td>
    </tr>
</script>

