<div class="subheader">
    <h1 class="subheader-title">
        Termo Quitação
    </h1>
</div>

<div id="knockoutPesquisaTermoQuitacaoFinanceiro">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-default waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-filter"></i>
                    Pesquisar Termo Quitacao
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-3" data-bind="visible: NumeroDeTermo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroDeTermo.text"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroDeTermo.requiredClass, value: NumeroDeTermo.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroDeTermo.maxlength, id : NumeroDeTermo.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataVigenciaInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataVigenciaInicial.text"></label>
                                    <input type="text" class="form-control" data-bind="class: DataVigenciaInicial.requiredClass, value: DataVigenciaInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataVigenciaInicial.maxlength, id : DataVigenciaInicial.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: DataVigenciaFinal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataVigenciaFinal.text"></label>
                                    <input type="text" class="form-control" data-bind="class: DataVigenciaFinal.requiredClass, value: DataVigenciaFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataVigenciaFinal.maxlength, id : DataVigenciaFinal.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: SituacaoAprovacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: SituacaoAprovacao.text, attr: { for: SituacaoAprovacao.id }"></label>
                                    <select class="form-control" data-bind="class: SituacaoAprovacao.requiredClass, options: SituacaoAprovacao.options, optionsText: 'text', optionsValue: 'value', value: SituacaoAprovacao.val, attr: { maxlength: SituacaoAprovacao.maxlength, id : SituacaoAprovacao.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: SituacaoTermoQuitacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: SituacaoTermoQuitacao.text, attr: { for: SituacaoTermoQuitacao.id }"></label>
                                    <select class="form-control" data-bind="class: SituacaoTermoQuitacao.requiredClass, options: SituacaoTermoQuitacao.options, optionsText: 'text', optionsValue: 'value', value: SituacaoTermoQuitacao.val, attr: { maxlength: SituacaoTermoQuitacao.maxlength, id : SituacaoTermoQuitacao.id}"></select>
                                </div>
                            </div>
                            @*<div class="col-12 col-md-3" data-bind="visible: AprovacaoPendente.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: AprovacaoPendente.text, attr: { for: AprovacaoPendente.id }"></label>
                                        <select class="form-control" data-bind="class: AprovacaoPendente.requiredClass, options: AprovacaoPendente.options, optionsText: 'text', optionsValue: 'value', value: AprovacaoPendente.val, attr: { maxlength: AprovacaoPendente.maxlength, id : AprovacaoPendente.id}"></select>
                                    </div>
                                </div>*@

                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-2">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel cardTermoHide" id="cardTermo" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
    <div class="panel-container">
        <div class="panel-content">
            <ul class="nav nav-tabs">
                <li class="nav-item active" id="litabDetalhes">
                    <a href="#tabDetalhes" class="nav-link active" data-bs-toggle="tab">
                        <i class="fal fa-edit"></i> <span class="hidden-mobile hidden-tablet">Detalhes</span>
                    </a>
                </li>
                <li class="nav-item" id="litabTermoQuitacao">
                    <a href="#tabTermoQuitacao" class="nav-link" data-bs-toggle="tab">
                        <i class="fal fa-edit"></i> <span class="hidden-mobile hidden-tablet">Termo de Quitação</span>
                    </a>
                </li>
            </ul>
            <div class="tab-content border border-top-0 p-3" id="myTabContent">
                <div class="tab-pane fade active show" id="tabDetalhes" role="tabpanel">
                    <div class="panel-content row">
                        <div class="col-12 col-md-6">
                            <div class="p-2 border my-2">
                                <b><label data-bind="text: NumeroTermo.text" class="mb-2"></label></b>
                                <span data-bind="text: NumeroTermo.val"></span>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <div class="col-12 " data-bind="visible: Transportador.visible">
                                        <div class="form-group">
                                            <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val,enable: Transportador.enable , valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                                <div class="input-group-append">
                                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                                        <i class="fal fa-search"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Filiais.idGrid}" cellspacing="0"></table>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="card m-2 p-2">
                                <div class="card-body row">
                                    <div class="col-12 col-md-6 ">
                                        <div class="col-12 col-md-12" data-bind="visible: DataInicial.visible">
                                            <div class="form-group">
                                                <label class="form-label" data-bind="text: DataInicial.text"></label>
                                                <input type="text" class="form-control" data-bind="class: DataInicial.requiredClass,enable: DataInicial.enable, value: DataInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicial.maxlength, id : DataInicial.id}" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="col-12 col-md-12" data-bind="visible: DataFinal.visible">
                                            <div class="form-group">
                                                <label class="form-label" data-bind="text: DataFinal.text"></label>
                                                <input type="text" class="form-control" data-bind="class: DataFinal.requiredClass, value: DataFinal.val, enable: DataFinal.enable,valueUpdate: 'afterkeydown', attr: { maxlength: DataFinal.maxlength, id : DataFinal.id}" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card p-0 m-2">
                                <div class="card-body">
                                    <ul>
                                        <li class="d-flex justify-content-between li-card">
                                            <span> Pagamento Efetivo</span>
                                        </li>
                                        <li class="d-flex justify-content-between li-card">
                                            <span data-bind="text: PagamentosEDescontosViaCreditoEmConta.text"></span>
                                            <span data-bind="text: PagamentosEDescontosViaCreditoEmConta.val"></span>
                                        </li>
                                        <li class="d-flex justify-content-between li-card">
                                            <span data-bind="text: PagamentosEDescontosViaConfiming.text"></span>
                                            <span data-bind="text: PagamentosEDescontosViaConfiming.val"></span>
                                        </li>
                                        <li class="d-flex justify-content-between totalizador li-card">
                                            <span data-bind="text: CreditoEmConta.text"></span>
                                            <span data-bind="text: CreditoEmConta.val"></span>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <div class="card p-0 m-2">
                                <div class="card-body">
                                    <ul>
                                        <li class="d-flex justify-content-between li-card">
                                            <span data-bind="text: TotalAdiantamento.text"></span>
                                            <span data-bind="text: TotalAdiantamento.val"></span>
                                        </li>
                                        <li class="d-flex justify-content-between li-card">
                                            <span data-bind="text: NotasCompensadasAdiantamentos.text"></span>
                                            <span data-bind="text: NotasCompensadasAdiantamentos.val"></span>
                                        </li>
                                        <li class="d-flex justify-content-between totalizador li-card">
                                            <span data-bind="text: SaldoAdiantamentoEmAberto.text"></span>
                                            <span data-bind="text: SaldoAdiantamentoEmAberto.val"></span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card p-2 m-2 totalizador">
                                <div class="card-body d-flex justify-content-between">
                                    <span data-bind="text: TotalGeralPagamento.text"></span>
                                    <span data-bind="text: TotalGeralPagamento.val"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 px-3 mt-5">
                            <button class="btn btn-default" type="button" data-bind="click: ExportarResumo.eventClick, attr: { id: ExportarResumo.id}">
                                <i class="fal fa-download"></i><span data-bind="text: ExportarResumo.text"></span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="tabTermoQuitacao" role="tabpanel">
                    <section class="col col-xs-12" data-bind="visible: SemImagem.val">
                        <div class="sem-imagem-documento"></div>
                    </section>
                    <section class="col col-xs-12 col-sm-12" data-bind="visible: PDFViewer.visible">
                        <embed data-bind="attr: { id: PDFViewer.id}" src="" style="width: 100%; height: 565px;" width="500" height="565">
                    </section>
                    <div class="d-flex justify-content-end gap-2 px-3 mt-5">
                        <div class="d-flex justify-content-start">
                            <button class="btn btn-primary" type="button" data-bind="click: Anexos.eventClick, attr: { id: Anexos.id}">
                                <i class="fal fa-file-alt"></i><span data-bind="text: Anexos.text"></span>
                            </button>
                        </div>
                        <button type="button" class="btn btn-success ms-1 d-none" data-bind="click: AssinarTermo.eventClick, visible: AssinarTermo.visible, text: AssinarTermo.text, attr: { id : AssinarTermo.id}">
                        </button>
                    </div>
                </div>

            </div>
            <footer id="knoutCRUDTermoQuitacaoDocumento">
                <div class="row mt-3">
                    <div class="d-flex justify-content-between">
                        <div>
                            <button type="button" class="btn btn-danger ms-1" data-bind="click: RejeitarTermo.eventClick, visible: RejeitarTermo.visible, text: RejeitarTermo.text, attr: { id : RejeitarTermo.id}">
                            </button>
                            <button type="button" class="btn btn-default ms-1" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, text: Cancelar.text, attr: { id : Cancelar.id}">
                            </button>
                        </div>

                        <button type="button" class="btn btn-success ms-1" data-bind="click: AprovarTermo.eventClick, visible: AprovarTermo.visible, attr: { id : AprovarTermo.id}">
                            <i class="fal fa-check"></i><span data-bind="text: AprovarTermo.text"></span>
                        </button>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>

<div class="modal fade" id="divModalGerenciarAnexos" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Anexos documentos assinados</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="knockoutDocumentoAssinados">
                <form class="mb-3" data-bind="visible: DocumentosAssinados.visible">
                    <div class="row">
                        <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                <input type="text" class="form-control" data-bind="value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                            </div>
                        </div>
                        <div class="form-group col-12 col-md-6" data-bind="visible: Arquivo.visible">
                            <label class="form-label" data-bind="text: Arquivo.text"></label>
                            <div class="custom-file" data-bind="visible: Arquivo.visible">
                                <input type="file" name="file" class="custom-file-input" accept=".jpg,.jpeg,.png,.pdf,.xls,.xlsx,.doc,.docx" data-bind="value: Arquivo.val, attr: { id: Arquivo.id }" readonly />
                                <label data-bind="text: NomeArquivo.val, attr: { for: Arquivo.id }" class="custom-file-label"></label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-success" type="button" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick,visible: Adicionar.visible, text: Adicionar.text, attr: { id : Adicionar.id}"></button>
                            </div>
                        </div>
                    </div>
                </form>
                <h4>@Localization.Resources.Gerais.Geral.ArquivosAnexados</h4>
                <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id : DocumentosAssinados.idGrid}"></table>
            </div>
        </div>
    </div>
</div>

<div id="divModalRejeitarTermo" class="modal fade" role="dialog" aria-hidden="true">
    <div id="knoutModalRejeitarTermo" class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header m-0">
                <h4>Rejeitar Termo de Quitação</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-hidden="true">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body row pt-0">
                <div class="col-12 col-md-12" data-bind="visible: Justificativa.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Justificativa.text, attr: { for: Justificativa.id }"></label>
                        <textarea class="form-control" rows="4" data-bind="value: Justificativa.val, valueUpdate: 'afterkeydown', attr: { maxlength: Justificativa.maxlength, id : Justificativa.id }"></textarea>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-success ms-1" data-bind="click: Enviar.eventClick, visible: Enviar.visible, attr: { id : Enviar.id}">
                        <i class="fal fa-check"></i><span data-bind="text: Enviar.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>



