
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Financeiro</li>
    <li class="breadcrumb-item active">Ficha Cliente</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        Ficha Cliente
    </h1>
</div>

<div id="knockoutPesquisaFichaCliente">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    Pesquisar Ficha de Clientes
                </button>
                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-12" data-bind="visible: Cliente.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                                    <div class="input-group">
                                        <input type="text" data-bind="css: Cliente.requiredClass, value: Cliente.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': Cliente.text, maxlength: Cliente.maxlength, id: Cliente.id, name: Cliente.id }" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="attr: { id: Cliente.idBtnSearch}">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>

                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid }" cellspacing="0"></table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                Efetuar Lançamento
            </h3>
        </div>
        <div class="panel-content">

            <div id="knockoutFichaCliente">
                <div class="row" data-bind="id: Visible.idFade, fadeVisible: Visible.visibleFade">
                    <div class="col-12 col-md-12 d-flex justify-content-center">
                        <h3>
                            <span data-bind="text: SaldoAtual.text"></span>
                            <span data-bind="text: SaldoAtual.val"></span>
                        </h3>
                    </div>
                </div>
                <div class="row" data-bind="id: Visible.idFade, fadeVisible: Visible.visibleFade">
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                            <div class="input-group">
                                <input type="text" data-bind="enable: Cliente.enable, css: Cliente.requiredClass, value: Cliente.val, valueUpdate: 'afterkeydown', attr: { 'aria-label': Cliente.text, maxlength: Cliente.maxlength, id: Cliente.id, name: Cliente.id }" />
                                <button class="btn btn-primary waves-effect waves-themed" type="button" data-bind="visible: Cliente.enable, attr: { id: Cliente.idBtnSearch}">
                                    <i class="fal fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="knockoutFichaClienteLancamentos">
                <div class="row">
                    <div class="col-12 col-md-4" data-bind="visible: Tipo.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Tipo.text"></label>
                            <select class="form-control" data-bind="options: Tipo.options, optionsText: 'text', optionsValue: 'value', value: Tipo.val, attr: { id : Tipo.id }"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-4" data-bind="visible: Valor.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Valor.text"></label>
                            <input type="text" class="form-control" data-bind="class: Valor.requiredClass, value: Valor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Valor.maxlength, id : Valor.id}" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4" data-bind="visible: Data.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Data.text, attr: { for: Data.id }"></label>
                            <input type="text" class="form-control" data-bind="css: Data.requiredClass,value: Data.val, valueUpdate: 'afterkeydown', attr: { maxlength: Data.maxlength, id : Data.id}">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6">
                        <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                            <i class="fal fa-ban"></i>
                            <span data-bind="text: Cancelar.text"></span>
                        </button>
                    </div>
                    <div class="col-6 justify-content-end d-flex">
                        <button type="button" class="btn btn-primary" data-bind=" enable: Adicionar.enable, visible: Adicionar.visible, click: Adicionar.eventClick, attr: { id: Adicionar.idBtnSearch }">
                            <span data-bind="text: Adicionar.text"></span>
                        </button>
                        <button type="button" class="btn btn-primary" data-bind="enable: Atualizar.enable, visible: Atualizar.visible, click: Atualizar.eventClick, attr: { id: Atualizar.idBtnSearch }">
                            <span data-bind="text: Atualizar.text"></span>
                        </button>
                    </div>
                </div>

                <div class="mt-3 row">
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: FichaClienteLancamentos.idGrid }" cellspacing="0"></table>
                </div>
            </div>

            <footer id="knockoutCRUDFichaCliente">
                <div class="row mt-4">
                    <div class="col-6 justify-content-start">
                        <button type="button" class="btn btn-labeled btn-danger" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { id : Cancelar.id}">
                            <span data-bind="text: Cancelar.text"></span>
                        </button>
                    </div>
                    <div class="col-6 d-flex justify-content-end">
                        <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Salvar.eventClick, visible: Salvar.visible, attr: { id : Salvar.id}">
                            <span data-bind="text: Salvar.text"></span>
                        </button>
                        <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { id : Adicionar.id}">
                            <span data-bind="text: Adicionar.text"></span>
                        </button>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</div>

<script src="~/scripts/fichaCliente"></script>
<script type="text/javascript">
    pageSetUp();

    $(document).ready(function () {
        loadFichaCliente();
    });
</script>