
<section id="widget-grid" class="">
    <div class="row">
        <div class="col col-lg-12">
            <h2 class="page-title txt-color-blueDark">
                Trajetos
            </h2>
        </div>
    </div>

    <div class="row">
        <article class="col-sm-12 col-md-12 col-lg-12">
            <div id="knockoutPesquisaCargaTrajeto">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-sortable="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false">
                    <header class="headerCursor" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                        <span class="widget-icon"> <i class="glyphicon glyphicon-search"></i> </span>
                        <h2>Pesquisar Trajetos</h2>
                    </header>
                    <div class="smart-form smart-form-no-padding" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                        <div>
                            <div>
                                <fieldset>
                                    <div class="row">
                                        <section data-bind="visible: Carga.visible" class="col col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <label class="label"><b data-bind="text: Carga.text"></b></label>
                                            <label data-bind="attr: { class: Carga.requiredClass}">
                                                <input type="text" data-bind="value: Carga.val, valueUpdate: 'afterkeydown', attr: { maxlength: Carga.maxlength, id : Carga.id}" />
                                            </label>
                                        </section>
                                        <section data-bind="visible: SituacaoTrajeto.visible" class="col col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                            <label class="label"><b data-bind="text: SituacaoTrajeto.text"></b></label>
                                            <label class="select">
                                                <select data-bind="options: SituacaoTrajeto.options, optionsText: 'text', optionsValue: 'value', value: SituacaoTrajeto.val, attr: { id : SituacaoTrajeto.id}"></select>
                                                <i></i>
                                            </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer class="no-padding">
                                    <button class="btn btn-default btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                        <i class="fa fa-search"></i>&nbsp;<span data-bind="text: Pesquisar.text"></span>
                                    </button>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="jarviswidget" id="wid-id-4" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
                <header class="headerCursor">
                    <span class="widget-icon"> <i class="fa fa-map-marker"></i> </span>
                    <h2>Trajetos</h2>
                </header>
                <div class="smart-form smart-form-no-padding">
                    <fieldset class="no-padding" id="knockoutCargaTrajeto">
                    </fieldset>
                    <footer>
                        <div id="divPaginationCargaTrajeto" style="text-align: center;"></div>
                    </footer>
                </div>
            </div>
        </article>
    </div>
</section>

<script src="~/scripts/cargaTrajeto"></script>
<link rel="stylesheet" href="~/css/cargaTrajeto" />

<script type="text/javascript">
    pageSetUp();

    $(document).ready(function () {
        loadCargaTrajeto();
    });

</script>

