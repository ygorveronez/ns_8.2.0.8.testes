                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Carga.text, attr: { for: Carga.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Carga.requiredClass, value: Carga.val, valueUpdate: 'afterkeydown', attr: { maxlength: Carga.maxlength, id : Carga.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Carga.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
                                    <select class="form-control" data-bind="class: Situacao.requiredClass, options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { maxlength: Situacao.maxlength, id : Situacao.id}"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-3" data-bind="visible: TipoComprovante.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoComprovante.text, attr: { for: TipoComprovante.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: TipoComprovante.requiredClass, value: TipoComprovante.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoComprovante.maxlength, id : TipoComprovante.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoComprovante.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: MotoristaCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: MotoristaCarga.text, attr: { for: MotoristaCarga.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: MotoristaCarga.requiredClass, value: MotoristaCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: MotoristaCarga.maxlength, id : MotoristaCarga.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: MotoristaCarga.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-3" data-bind="visible: VeiculosCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: VeiculosCarga.text, attr: { for: VeiculosCarga.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: VeiculosCarga.requiredClass, value: VeiculosCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: VeiculosCarga.maxlength, id : VeiculosCarga.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: VeiculosCarga.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-md-3 col-lg-2" data-bind="visible : DataCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataCarga.text, attr: { for: DataCarga.id }"></label>
                                    <input type="text" class="form-control" data-bind="value: DataCarga.val, attr: { maxlength: DataCarga.maxlength, id : DataCarga.id} " />
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex justify-content-end">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-end">
                                <button class="btn btn-primary" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                                    <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel">
            <div class="panel-container">
                <div class="panel-hdr">
                    <h3> Comprovantes</h3>
                </div>
                <div class="panel-content">

                    <table width="100%" class="table table-bordered table-hover" id="grid-comprovantes-carga" cellspacing="0"></table>

                    <div class="d-flex justify-content-end mt-3">
                        <label><b><span class="p-1" style="border-radius: 5px; border-style: solid; border-width: thin; margin-right: 3px;">Pendente</span></b></label>
                        <label><b><span class="p-1 bg-success-100" style="border-radius: 5px; margin-right: 3px; ">Recebido</span></b></label>
                        <label><b><span class="p-1 bg-info-100" style="border-radius: 5px;">Justificado</span></b></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

