
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">@Localization.Resources.Cargas.AvaliacaoEntrega.AvaliacaoEntregas</li>
    <li class="breadcrumb-item active">@Localization.Resources.Cargas.AvaliacaoEntrega.MotivoReijeicaoAuditoria</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        @Localization.Resources.Cargas.AvaliacaoEntrega.AvaliacaoEntregas
    </h1>
</div>

<div id="knoutPesquisaCargaEntrega">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    @Localization.Resources.Cargas.AvaliacaoEntrega.PesquisarEntregas
                </button>

                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-4" data-bind="visible: NumeroCarga.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroCarga.text, attr: { for: NumeroCarga.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroCarga.requiredClass, value: NumeroCarga.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroCarga.maxlength, id : NumeroCarga.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Destinatario.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Destinatario.text, attr: { for: Destinatario.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Destinatario.requiredClass, value: Destinatario.val, valueUpdate: 'afterkeydown', attr: { maxlength: Destinatario.maxlength, id : Destinatario.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Destinatario.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: NumeroNotaFiscal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroNotaFiscal.text, attr: { for: NumeroNotaFiscal.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroNotaFiscal.requiredClass, value: NumeroNotaFiscal.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroNotaFiscal.maxlength, id : NumeroNotaFiscal.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: NumeroTransporte.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroTransporte.text, attr: { for: NumeroTransporte.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroTransporte.requiredClass, value: NumeroTransporte.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroTransporte.maxlength, id : NumeroTransporte.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: SituacaoEntrega.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: SituacaoEntrega.text, attr: { for: SituacaoEntrega.id }"></label>
                                    <select class="form-control" data-bind="class: SituacaoEntrega.requiredClass, options: SituacaoEntrega.options, optionsText: 'text', optionsValue: 'value', value: SituacaoEntrega.val, attr: { maxlength: SituacaoEntrega.maxlength, id : SituacaoEntrega.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: Respondida.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Respondida.text, attr: { for: Respondida.id }"></label>
                                    <select class="form-control" data-bind="class: Respondida.requiredClass, options: Respondida.options, optionsText: 'text', optionsValue: 'value', value: Respondida.val, attr: { maxlength: Respondida.maxlength, id : Respondida.id}"></select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-end mb-3">
                            <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>
                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                @Localization.Resources.Cargas.AvaliacaoEntrega.FormularioAvaliacao
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div class="row" id="knoutAvaliacaoEntrega">
                    <div class="row">
                        <div class="row" data-bind="visible: CodigoCargaEntrega.val() > 0">
                            <section class="col-12 col col g-md-6">
                                <div class="well">

                                    <div class="row">
                                        <div class="col col-xs-12 col-sm-12 col-md-3 col-lg-3 margin-bottom-5">
                                            <label><b><span data-bind="text: NumeroCarga.text"></span></b><span data-bind="text: NumeroCarga.val"></span></label>
                                        </div>
                                        <div class="col col-xs-12 col-sm-12 col-md-5 col-lg-5 margin-bottom-5">
                                            <label><b><span data-bind="text: Destinatario.text"></span></b><span data-bind="text: Destinatario.val"></span></label>
                                        </div>
                                        <div class="col col-xs-12 col-sm-12 col-md-4 col-lg-4 margin-bottom-5">
                                            <label><b><span data-bind="text: SituacaoAvaliacao.text"></span></b><span data-bind="text: SituacaoAvaliacao.val"></span></label>
                                        </div>
                                    </div>

                                </div>
                            </section>
                        </div>

                        <div>
                            <div class="geral row">
                                <section class="col col-xs-12 col-sm-12 col-md-4 col-lg-4">
                                    <label class="label"><b>@Localization.Resources.Cargas.AvaliacaoEntrega.AvaliacaoGeral</b></label>
                                    <div class="rating ">
                                        <input type="radio" value="5" name="avaliacao-geral" id="avaliacao-geral-5" />
                                        <label class="full" for="avaliacao-geral-5"></label>
                                        <input type="radio" value="4" name="avaliacao-geral" id="avaliacao-geral-4" />
                                        <label class="full" for="avaliacao-geral-4"></label>
                                        <input type="radio" value="3" name="avaliacao-geral" id="avaliacao-geral-3" />
                                        <label class="full" for="avaliacao-geral-3"></label>
                                        <input type="radio" value="2" name="avaliacao-geral" id="avaliacao-geral-2" />
                                        <label class="full" for="avaliacao-geral-2"></label>
                                        <input type="radio" value="1" name="avaliacao-geral" id="avaliacao-geral-1" />
                                        <label class="full" for="avaliacao-geral-1"></label>
                                    </div>
                                </section>
                            </div>
                            <div class="col col-12">
                                <div class="question">
                                    <!-- ko foreach: Perguntas-->
                                    <div class="row pergunta">
                                        <section class="col col-8">
                                            <b class="question-title" data-bind="text: Pergunta.val"></b>
                                            <p data-bind="html: DescricaoPergunta.val"></p>
                                        </section>

                                        <div class="col col-2">
                                            <div class="rating">
                                                <input type="radio" value="5" data-bind=" attr: { name: 'avaliacao-' + Codigo.val(), id: 'star-rate-5-' + Codigo.val() } " />
                                                <label class="full" data-bind=" attr: { for: 'star-rate-5-' + Codigo.val() } "></label>
                                                <input type="radio" value="4" data-bind=" attr: { name: 'avaliacao-' + Codigo.val(), id: 'star-rate-4-' + Codigo.val() } " />
                                                <label class="full" data-bind=" attr: { for: 'star-rate-4-' + Codigo.val() } "></label>
                                                <input type="radio" value="3" data-bind=" attr: { name: 'avaliacao-' + Codigo.val(), id: 'star-rate-3-' + Codigo.val() } " />
                                                <label class="full" data-bind=" attr: { for: 'star-rate-3-' + Codigo.val() } "></label>
                                                <input type="radio" value="2" data-bind=" attr: { name: 'avaliacao-' + Codigo.val(), id: 'star-rate-2-' + Codigo.val() } " />
                                                <label class="full" data-bind=" attr: { for: 'star-rate-2-' + Codigo.val() } "></label>
                                                <input type="radio" value="1" data-bind=" attr: { name: 'avaliacao-' + Codigo.val(), id: 'star-rate-1-' + Codigo.val() } " />
                                                <label class="full" data-bind=" attr: { for: 'star-rate-1-' + Codigo.val() } "></label>
                                            </div>
                                        </div>

                                        <div class="col col-2 text-end">
                                            <button data-bind="click: gerenciarAnexosPerguntaClick.bind(Codigo.val(), Codigo.val()), enable: BotaoAnexos.enable, visible: BotaoAnexos.visible, attr: { id: BotaoAnexos.id}" class="btn btn-default" type="button">
                                                <i class="fal fa-file-alt"></i> <span data-bind="text: BotaoAnexos.text"></span>
                                            </button>
                                        </div>

                                    </div>

                                    <!-- /ko -->
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: MotivoAvaliacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: MotivoAvaliacao.text, attr: { for: MotivoAvaliacao.id }"></label>
                                    <select class="form-control" data-bind="class: MotivoAvaliacao.requiredClass,enable: MotivoAvaliacao.enable, options: MotivoAvaliacao.options, optionsText: 'text', optionsValue: 'value', value: MotivoAvaliacao.val, attr: { maxlength: MotivoAvaliacao.maxlength, id : MotivoAvaliacao.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-12" data-bind="visible: Observacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Observacao.text, attr: { for: Observacao.id }"></label>
                                    <textarea class="form-control" rows="4" data-bind="value: Observacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Observacao.maxlength, id : Observacao.id }"></textarea>
                                </div>
                            </div>



                        </div>
                    </div>
                </div>

                <div id="knoutCRUDAvaliacaoEntrega" class=" d-flex justify-content-end">
                    <button type="button" class="btn btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, text: Atualizar.text, attr: { id : Atualizar.id}">
                    </button>
                    <button type="button" class="btn btn-default" data-bind="click: Limpar.eventClick, visible: Limpar.visible, text: Limpar.text, attr: { id : Limpar.id}">
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="ModaisAvaliacaoEntrega"></div>

