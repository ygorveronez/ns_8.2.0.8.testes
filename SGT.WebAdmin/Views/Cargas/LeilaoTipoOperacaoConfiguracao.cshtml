
<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Gestão de Cargas</li>
        <li class="breadcrumb-item">Cargas</li>
        <li class="breadcrumb-item active">Configuração de Leilão por Tipo de Operação</li>
    </ol>

    <div class="subheader">
        <h1 class="subheader-title">
            <i class=""></i> Configuração de Leilão por Tipo de Operação
        </h1>
    </div>

    <div id="knockoutPesquisaLeilaoTipoOperacaoConfiguracao">
        <div class="panel">
            <div class="panel-container">
                <div class="panel-content">
                    <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                        <i class="fal fa-search"></i>
                        Pesquisar configurações
                    </button>

                    <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                        <form>
                            <div class="row">
                                <div class="col-12 col-md-6" data-bind=" visible : TipoOperacaoEmissao.visible">
                                    <div class="form-group">
                                        <label class="form-label" data-bind="text: TipoOperacaoEmissao.text"></label>
                                        <select class="form-control" data-bind="options: TipoOperacaoEmissao.options, optionsText: 'text', optionsValue: 'value', value: TipoOperacaoEmissao.val, attr: { id : TipoOperacaoEmissao.id}"></select>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="d-flex align-items-center justify-content-end mb-3">
                            <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                            </button>
                        </div>
                        <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-edit"></i>
                    Cadastrar Configuração de Leilão por Tipo de Operação
                </h3>
            </div>
            <div class="panel-content">
                <form id="knockoutCadastroLeilaoTipoOperacaoConfiguracao">
                    <div class="row">
                        <div class="col-12 col-md-6" data-bind=" visible : TipoOperacaoEmissao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TipoOperacaoEmissao.text"></label>
                                <select class="form-control" data-bind="options: TipoOperacaoEmissao.options, optionsText: 'text', optionsValue: 'value', value: TipoOperacaoEmissao.val, attr: { id : TipoOperacaoEmissao.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-6" data-bind=" visible : LimiteTempoLeilaoEmHoras.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: LimiteTempoLeilaoEmHoras.text"></label>
                                <input type="text" class="form-control" data-bind="value: LimiteTempoLeilaoEmHoras.val, attr: { maxlength: LimiteTempoLeilaoEmHoras.maxlength, id : LimiteTempoLeilaoEmHoras.id} " />
                            </div>
                        </div>


                        <div class="col-12 col-md-4" data-bind="visible: PermiteLeilao.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: PermiteLeilao.val, attr: { maxlength: PermiteLeilao.maxlength, name: PermiteLeilao.id, id: PermiteLeilao.id }">
                                    <label class="custom-control-label" data-bind="text: PermiteLeilao.text, attr: { for: PermiteLeilao.id }"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer>
                        <div class="row">
                            <div class="col-6">
                                <button type="button" class="btn btn-labeled btn-default" data-bind="click: Cancelar.eventClick, visible: Cancelar.visible, attr: { value: Cancelar.text, id : Cancelar.id}">
                                    <i class="fal fa-ban"></i>
                                    <span data-bind="text: Cancelar.text"></span>
                                </button>
                            </div>
                            <div class="col-6 d-flex justify-content-end">
                                <button type="button" class="btn btn-labeled btn-danger mx-3" data-bind="click: Excluir.eventClick, visible: Excluir.visible, attr: { value: Excluir.text, id : Excluir.id}">
                                    <i class="fal fa-trash"></i>
                                    <span data-bind="text: Excluir.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success" data-bind="click: Atualizar.eventClick, visible: Atualizar.visible, attr: { value: Atualizar.text, id : Atualizar.id}">
                                    <i class="fal fa-check"></i>
                                    <span data-bind="text: Atualizar.text"></span>
                                </button>
                                <button type="button" class="btn btn-labeled btn-success" data-loading-text="Aguarde..." data-bind="click: Adicionar.eventClick, visible: Adicionar.visible, attr: { value: Adicionar.text, id : Adicionar.id}">
                                    <span data-bind="text: Adicionar.text"></span>
                                </button>
                            </div>
                        </div>
                    </footer>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="~/scripts/leilaoTipoOpereracaoConfiguracao"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadLeilaoTipoOperacaoConfiguracao();
    });

</script>

