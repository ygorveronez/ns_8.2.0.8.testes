<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Escrituração</li>
    <li class="breadcrumb-item active">@Localization.Resources.Escrituracao.SaldoContratoFreteCliente.Titulo</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        @Localization.Resources.Escrituracao.SaldoContratoFreteCliente.Titulo
    </h1>
</div>

<div id="knockoutPesquisaContrato">
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-primary waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-search"></i>
                    @Localization.Resources.Escrituracao.SaldoContratoFreteCliente.TituloPesquisa
                </button>
                <div class="mt-3" data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form>
                        <div class="row">
                            <div class="col-12 col-md-2" data-bind="visible: DataInicioContrato.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicioContrato.text"></label>
                                    <input type="text" class="form-control" data-bind="css: DataInicioContrato.requiredClass, value: DataInicioContrato.val, enable: DataInicioContrato.enable, attr: { maxlength: DataInicioContrato.maxlength, id : DataInicioContrato.id} " />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataFimContrato.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataFimContrato.text"></label>
                                    <input type="text" class="form-control" data-bind="css: DataInicioContrato.requiredClass, value: DataFimContrato.val, enable: DataFimContrato.enable, attr: { maxlength: DataFimContrato.maxlength, id : DataFimContrato.id} " />
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroContrato.text, attr: { for: NumeroContrato.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: NumeroContrato.requiredClass, value: NumeroContrato.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroContrato.maxlength, id : NumeroContrato.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: NumeroContrato.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Carga.text, attr: { for: Carga.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Carga.requiredClass, value: Carga.val, valueUpdate: 'afterkeydown', attr: { maxlength: Carga.maxlength, id : Carga.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Carga.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Cliente.requiredClass, value: Cliente.val, valueUpdate: 'afterkeydown', attr: { maxlength: Cliente.maxlength, id : Cliente.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Cliente.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="d-flex align-items-center justify-content-end mb-3">
                        <button class="btn btn-primary waves-effect waves-themed btnPesquisarFiltroPesquisa" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </div>
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid}" cellspacing="0"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel" id="divMovimento">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-edit"></i>
                @Localization.Resources.Escrituracao.SaldoContratoFreteCliente.Extrato
            </h3>
        </div>
        <br />
        <div id="knockoutMovimento">
            <div class="row" style="margin-left: 5px; margin-right: 5px;">
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                        <div class="input-group">
                            <input type="text" class="form-control" data-bind="css: Cliente.requiredClass, enable: false, value: Cliente.val, valueUpdate: 'afterkeydown', attr: { maxlength: Cliente.maxlength, id: Cliente.id }" />
                            <div class="input-group-append">
                                <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Cliente.idBtnSearch }, enable: false" type="button" aria-label="Buscar">
                                    <i class="fal fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-md-2" data-bind="visible: Status.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: Status.text"></label>
                        <input type="text" class="form-control" data-bind="class: Status.requiredClass, enable: Status.enable, value: Status.val, valueUpdate: 'afterkeydown', attr: { maxlength: Status.maxlength, id : Status.id}" />
                    </div>
                </div>

                <div class="col-md-4"></div>

                <div class="col-12 col-md-4" data-bind="visible: SaldoFinalContrato.visible">
                    <div class="form-group">
                        <label class="form-label" data-bind="text: SaldoFinalContrato.text"></label>
                        <input type="text" class="form-control" data-bind="class: SaldoFinalContrato.requiredClass, value: SaldoFinalContrato.val, enable: SaldoFinalContrato.enable, valueUpdate: 'afterkeydown', attr: { maxlength: SaldoFinalContrato.maxlength, id: SaldoFinalContrato.id }" />
                    </div>
                </div>
            </div>

            <div class="panel-content">
                <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Pesquisar.idGrid }" cellspacing="0"></table>
            </div>
            <button style="float: right; margin-right: 10px;" class="btn btn-success waves-effect waves-themed" type="button" data-bind="click: FecharContrato.eventClick, visible: FecharContrato.visible, attr: { id: FecharContrato.id }">
                <i class="fal fa-check"></i><span data-bind="text: FecharContrato.text"></span>
            </button>
        </div>
    </div>
</div>

<script src="/scripts/SaldoContratoFreteCliente"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
                _PermissoesPersonalizadas = @Html.Raw(ViewBag.PermissoesPersonalizadas);
        LoadLocalizationResources(["Escrituracao.SaldoContratoFreteCliente"]).then(loadMovimentoContrato);
    });

</script>
