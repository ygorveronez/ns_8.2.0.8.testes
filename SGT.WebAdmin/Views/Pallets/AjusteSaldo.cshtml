﻿

<style>
    table.table {
        margin-top: 0 !important;
    }

    #divSaldo .widget-body {
        padding-bottom: 15px;
    }
</style>


<section id="widget-grid">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Produtos</li>
        <li class="breadcrumb-item active">Marca de Produtos</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Ajuste de Saldo dos Pallets
        </h1>
        <div class="subheader-help">
            <button type="button" onclick="iniciarAjuda(1001)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
        </div>
    </div>

    <div class="panel" id="knockoutAjusteSaldoPesquisa">
        <div class="panel-container">
            <div class="panel-content">
                <button class="btn btn-default waves-effect waves-themed" data-bind="click: ExibirFiltros.eventClick, id: ExibirFiltros.id">
                    <i class="fal fa-filter"></i> <span>Pesquisar</span>
                </button>
                <div data-bind="id: ExibirFiltros.idFade, fadeVisible: ExibirFiltros.visibleFade">
                    <form class="mt-3">
                        <div class="row">
                            <div class="col-12 col-sm-4 col-xl-2" data-bind="visible: TipoMovimento.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoMovimento.text, attr: { for: TipoMovimento.id }"></label>
                                    <select class="form-control" data-bind="class: TipoMovimento.requiredClass, options: TipoMovimento.options, optionsText: 'text', optionsValue: 'value', value: TipoMovimento.val, attr: { maxlength: TipoMovimento.maxlength, id : TipoMovimento.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-sm-4 col-xl-2" data-bind="visible: DataMovimentoInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataMovimentoInicial.text, attr: { for: DataMovimentoInicial.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataMovimentoInicial.requiredClass, value: DataMovimentoInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataMovimentoInicial.maxlength, id : DataMovimentoInicial.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-sm-4 col-xl-2" data-bind="visible: DataMovimentoFinal.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataMovimentoFinal.text, attr: { for: DataMovimentoFinal.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataMovimentoFinal.requiredClass, value: DataMovimentoFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataMovimentoFinal.maxlength, id : DataMovimentoFinal.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-xl-3" data-bind="visible: NumeroDocumento.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: NumeroDocumento.text, attr: { for: NumeroDocumento.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: NumeroDocumento.requiredClass, value: NumeroDocumento.val, valueUpdate: 'afterkeydown', attr: { maxlength: NumeroDocumento.maxlength, id : NumeroDocumento.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-xl-3" data-bind="visible: CodigoCargaEmbarcador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: CodigoCargaEmbarcador.text, attr: { for: CodigoCargaEmbarcador.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: CodigoCargaEmbarcador.requiredClass, value: CodigoCargaEmbarcador.val, valueUpdate: 'afterkeydown', attr: { maxlength: CodigoCargaEmbarcador.maxlength, id : CodigoCargaEmbarcador.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Filial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Filial.text, attr: { for: Filial.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Filial.requiredClass, value: Filial.val, valueUpdate: 'afterkeydown', attr: { maxlength: Filial.maxlength, id : Filial.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Filial.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6" data-bind="visible: Transportador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6" data-bind="visible: RetornarSaldoFilial.visible">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" data-bind="checked: RetornarSaldoFilial.val, attr: { maxlength: RetornarSaldoFilial.maxlength, name: RetornarSaldoFilial.id, id: RetornarSaldoFilial.id }">
                                        <label class="custom-control-label" data-bind="text: RetornarSaldoFilial.text, attr: { for: RetornarSaldoFilial.id }"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <footer class="d-flex justify-content-end">
                        <button class="btn btn-primary ms-2" type="button" data-bind="click: Pesquisar.eventClick, attr: { id: Pesquisar.id}">
                            <i class="fal fa-search"></i> <span data-bind="text: Pesquisar.text"></span>
                        </button>
                    </footer>
                </div>
            </div>
        </div>
    </div>

    <div class="panel" id="knockoutAjusteSaldo">
        <div class="panel-container">
            <div class="panel-hdr">
                <h4>
                    <i class="fal fa-edit"></i>
                    Extrato
                </h4>
            </div>
            <div class="panel-content">
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success mb-2" data-bind="visible: Adicionar.visible, click: Adicionar.eventClick" type="button">
                        <i class="fal fa-plus"></i><span data-bind="text: Adicionar.text"></span>
                    </button>
                </div>
                <div class="widget-body">
                    <table width="100%" class="table table-bordered table-hover" data-bind="attr: { id: Adicionar.idGrid }" cellspacing="0"></table>
                </div>
                <footer class="no-padding d-flex justify-content-end">
                    <div class="font-ambar mt-2" data-bind="visible: SaldoPorRotatividade.visible">
                        <b>O saldo considerando a rotatividade de <span data-bind="text: DiasRotatividade.val"></span> dias é de <span data-bind="text: SaldoPorRotatividade.val"></span> pallets.</b>
                    </div>
                </footer>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="divModalAjusteSaldoCadastro" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content well-no-padding">
            <div class="modal-header">
                <h4 class="modal-title">Ajuste de Saldo</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal">
                    <i class="fal fa-times"></i>
                </button>
            </div>
            <div class="modal-body" id="knockoutAjusteSaldoCadastro">
                <div class="row">
                    <div class="col-12 col-md-6" data-bind="visible: TipoOperacaoMovimentacao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: TipoOperacaoMovimentacao.text, attr: { for: TipoOperacaoMovimentacao.id }"></label>
                            <select class="form-control" data-bind="class: TipoOperacaoMovimentacao.requiredClass, options: TipoOperacaoMovimentacao.options, optionsText: 'text', optionsValue: 'value', value: TipoOperacaoMovimentacao.val, attr: { maxlength: TipoOperacaoMovimentacao.maxlength, id : TipoOperacaoMovimentacao.id}"></select>
                        </div>
                    </div>
                    <div class="col-12 col-md-6" data-bind="visible: Quantidade.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Quantidade.text, attr: { for: Quantidade.id }"></label>
                            <input type="text" class="form-control" data-bind="class: Quantidade.requiredClass, value: Quantidade.val, valueUpdate: 'afterkeydown', attr: { maxlength: Quantidade.maxlength, id : Quantidade.id}" />
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Transportador.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Transportador.text, attr: { for: Transportador.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Transportador.requiredClass, value: Transportador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportador.maxlength, id : Transportador.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportador.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Cliente.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Cliente.text, attr: { for: Cliente.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Cliente.requiredClass, value: Cliente.val, valueUpdate: 'afterkeydown', attr: { maxlength: Cliente.maxlength, id : Cliente.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Cliente.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Filial.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Filial.text, attr: { for: Filial.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Filial.requiredClass, value: Filial.val, valueUpdate: 'afterkeydown', attr: { maxlength: Filial.maxlength, id : Filial.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Filial.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Setor.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Setor.text, attr: { for: Setor.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Setor.requiredClass, value: Setor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Setor.maxlength, id : Setor.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Setor.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12" data-bind="visible: Observacao.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Observacao.text, attr: { for: Observacao.id }"></label>
                            <textarea class="form-control" rows="4" data-bind="value: Observacao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Observacao.maxlength, id : Observacao.id }"></textarea>
                        </div>
                    </div>
                </div>
                <footer class=" d-flex justify-content-end">
                    <button class="btn btn-primary" data-bind="click: Adicionar.eventClick, attr: { id: Adicionar.id}" type="button">
                        <i class="fal fa-search"></i>&nbsp;<span data-bind="text: Adicionar.text"></span>
                    </button>
                </footer>
            </div>
        </div>
    </div>
</div>

<script src="~/scripts/ajusteSaldoPallets"></script>

