
@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Ocorrências</li>
        <li class="breadcrumb-item">Relatórios</li>
        <li class="breadcrumb-item active">Ocorrência Centro Custo</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Relatório de Itens não Conformidade
        </h1>
    </div>
    <div id="divConteudoRelatorio" class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-search"></i>
                    Relatório
                </h3>
            </div>
            <div class="panel-content">
                <form>
                    <div id="knockoutPesquisaItemNaoConformidade">
                        <div class="row">

                            <div class="col-12 col-md-6" data-bind="visible: TipoRelatorio.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoRelatorio.text, attr: { for: TipoRelatorio.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: TipoRelatorio.requiredClass, value: TipoRelatorio.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoRelatorio.maxlength, id : TipoRelatorio.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoRelatorio.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-4" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text"></label>
                                    <input type="text" class="form-control" data-bind="class: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>

                            <div class="col-12 col-md-2" data-bind="visible: Situacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Situacao.text, attr: { for: Situacao.id }"></label>
                                    <select class="form-control" data-bind="class: Situacao.requiredClass, options: Situacao.options, optionsText: 'text', optionsValue: 'value', value: Situacao.val, attr: { maxlength: Situacao.maxlength, id : Situacao.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-4" data-bind="visible: Grupo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Grupo.text, attr: { for: Grupo.id }"></label>
                                    <select class="form-control" data-bind="class: Grupo.requiredClass, options: Grupo.options, optionsText: 'text', optionsValue: 'value', value: Grupo.val, attr: { maxlength: Grupo.maxlength, id : Grupo.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-4" data-bind="visible: SubGrupo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: SubGrupo.text, attr: { for: SubGrupo.id }"></label>
                                    <select class="form-control" data-bind="class: SubGrupo.requiredClass, options: SubGrupo.options, optionsText: 'text', optionsValue: 'value', value: SubGrupo.val, attr: { maxlength: SubGrupo.maxlength, id : SubGrupo.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-4" data-bind="visible: Area.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Area.text, attr: { for: Area.id }"></label>
                                    <select class="form-control" data-bind="class: Area.requiredClass, options: Area.options, optionsText: 'text', optionsValue: 'value', value: Area.val, attr: { maxlength: Area.maxlength, id : Area.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-2" data-bind="visible: IrrelevanteNaoConformidade.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: IrrelevanteNaoConformidade.text, attr: { for: IrrelevanteNaoConformidade.id }"></label>
                                    <select class="form-control" data-bind="class: IrrelevanteNaoConformidade.requiredClass, options: IrrelevanteNaoConformidade.options, optionsText: 'text', optionsValue: 'value', value: IrrelevanteNaoConformidade.val, attr: { maxlength: IrrelevanteNaoConformidade.maxlength, id : IrrelevanteNaoConformidade.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-2" data-bind="visible: PermiteContingencia.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: PermiteContingencia.text, attr: { for: PermiteContingencia.id }"></label>
                                    <select class="form-control" data-bind="class: PermiteContingencia.requiredClass, options: PermiteContingencia.options, optionsText: 'text', optionsValue: 'value', value: PermiteContingencia.val, attr: { maxlength: PermiteContingencia.maxlength, id : PermiteContingencia.id}"></select>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
                <div class="row mb-3">
                    <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                            <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                        </button>
                    </div>
                    <div id="knockoutCRUDFiltrosPesquisaItemNaoConformidade" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">

                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                        </button>
                    </div>
                </div>
                <div id="divConfigRelatorio"></div>

                <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>

                <div id="knockoutCRUDPesquisaItemNaoConformidade" class="d-flex justify-content-center justify-content-md-end mt-3">
                    <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                        <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                    </button>
                    <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                        <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/relatorios/scripts/ItemNaoConformidade"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        LoadItemNaoConformidade();
    });

</script>
