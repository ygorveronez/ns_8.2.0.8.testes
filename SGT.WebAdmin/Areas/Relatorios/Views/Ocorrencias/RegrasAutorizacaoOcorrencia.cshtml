@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Ocorrências</li>
        <li class="breadcrumb-item">Relatórios</li>
        <li class="breadcrumb-item active">Tipo Ocorrência</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Relatório de Regras de Autorização de Ocorrências
        </h1>
    </div>
    <div id="divConteudoRelatorio" class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-search"></i>
                    Relatório
                </h3>
            </div>
            <div class="panel-content">
                <form>
                    <div id="knockoutPesquisaRegrasAutorizacaoOcorrencia">
                        <div class="row">

                            <div class="col-12 col-md-6" data-bind="visible: Descricao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Descricao.text, attr: { for: Descricao.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: Descricao.requiredClass, value: Descricao.val, valueUpdate: 'afterkeydown', attr: { maxlength: Descricao.maxlength, id : Descricao.id}" />
                                </div>
                            </div>

                            <div class="col-12 col-md-3" data-bind="visible: DataVgenciaInicial.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataVgenciaInicial.text, attr: { for: DataVgenciaInicial.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataVgenciaInicial.requiredClass, value: DataVgenciaInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataVgenciaInicial.maxlength, id : DataVgenciaInicial.id}" />
                                </div>
                            </div>

                            <div class="col-12 col-md-3" data-bind="visible: DataVgenciaLimite.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataVgenciaLimite.text, attr: { for: DataVgenciaLimite.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataVgenciaLimite.requiredClass, value: DataVgenciaLimite.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataVgenciaLimite.maxlength, id : DataVgenciaLimite.id}" />
                                </div>
                            </div>

                            <div class="col-12 col-md-6" data-bind="visible: Aprovador.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Aprovador.text, attr: { for: Aprovador.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Aprovador.requiredClass, value: Aprovador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Aprovador.maxlength, id : Aprovador.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Aprovador.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-3" data-bind="visible: EtapaAutorizacao.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: EtapaAutorizacao.text, attr: { for: EtapaAutorizacao.id }"></label>
                                    <select class="form-control" data-bind="class: EtapaAutorizacao.requiredClass, options: EtapaAutorizacao.options, optionsText: 'text', optionsValue: 'value', value: EtapaAutorizacao.val, attr: { maxlength: EtapaAutorizacao.maxlength, id : EtapaAutorizacao.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-3" data-bind="visible: Ativo.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Ativo.text, attr: { for: Ativo.id }"></label>
                                    <select class="form-control" data-bind="class: Ativo.requiredClass, options: Ativo.options, optionsText: 'text', optionsValue: 'value', value: Ativo.val, attr: { maxlength: Ativo.maxlength, id : Ativo.id}"></select>
                                </div>
                            </div>

                            <div class="col-12 col-md-6" data-bind="visible: TipoRelatorio.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoRelatorio.text, attr: { for: TipoRelatorio.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: TipoRelatorio.requiredClass, value: TipoRelatorio.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoRelatorio.maxlength, id : TipoRelatorio.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoRelatorio.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-md-12" data-bind="visible: ExibirAlcadas.visible">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" data-bind="checked: ExibirAlcadas.val, attr: { maxlength: ExibirAlcadas.maxlength, name: ExibirAlcadas.id, id: ExibirAlcadas.id }">
                                        <label class="custom-control-label" data-bind="text: ExibirAlcadas.text, attr: { for: ExibirAlcadas.id }"></label>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </form>
                <div class="row mb-3">
                    <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                            <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                        </button>
                    </div>
                    <div id="knockoutCRUDFiltrosPesquisaRegrasAutorizacaoOcorrencia" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">


                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                        </button>
                    </div>
                </div>
                <div id="divConfigRelatorio"></div>

                <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>

                <div id="knockoutCRUDPesquisaRegrasAutorizacaoOcorrencia" class="d-flex justify-content-center justify-content-md-end mt-3">
                    <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                        <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                    </button>
                    <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                        <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/relatorios/scripts/regrasAutorizacaoOcorrencia"></script>

<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        LoadRegrasAutorizacaoOcorrencia();
    });

</script>
