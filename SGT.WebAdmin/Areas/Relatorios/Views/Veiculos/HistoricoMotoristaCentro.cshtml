@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Relatórios</li>
        <li class="breadcrumb-item">Motoristas</li>
        <li class="breadcrumb-item active">Historico Motorista Vinculo</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Relatório de Histórico de Vínculos dos Motoristas
        </h1>
    </div>
    <div id="divConteudoRelatorio" class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-file-alt"></i>
                    Relatórios
                </h3>
            </div>
            <div class="panel-content">
                <form>
                    <div id="knockoutPesquisaMotorista">
                        <div class="row">
                            <div class="col-12 col-md-2" data-bind="visible: DataHoraVinculoInicialHistoricoMotorista.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataHoraVinculoInicialHistoricoMotorista.text, attr: { for: DataHoraVinculoInicialHistoricoMotorista.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataHoraVinculoInicialHistoricoMotorista.requiredClass, value: DataHoraVinculoInicialHistoricoMotorista.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataHoraVinculoInicialHistoricoMotorista.maxlength, id : DataHoraVinculoInicialHistoricoMotorista.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataHoraVinculoFinalHistoricoMotorista.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataHoraVinculoFinalHistoricoMotorista.text, attr: { for: DataHoraVinculoFinalHistoricoMotorista.id }"></label>
                                    <input type="text" class="form-control" data-bind="class: DataHoraVinculoFinalHistoricoMotorista.requiredClass, value: DataHoraVinculoFinalHistoricoMotorista.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataHoraVinculoFinalHistoricoMotorista.maxlength, id : DataHoraVinculoFinalHistoricoMotorista.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Motorista.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Motorista.text, attr: { for: Motorista.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Motorista.requiredClass, value: Motorista.val, valueUpdate: 'afterkeydown', attr: { maxlength: Motorista.maxlength, id : Motorista.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Motorista.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataInicialVinculoCentroResultado.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataInicialVinculoCentroResultado.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataInicialVinculoCentroResultado.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicialVinculoCentroResultado.maxlength, id : DataInicialVinculoCentroResultado.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-2" data-bind="visible: DataFinalVinculoCentroResultado.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: DataFinalVinculoCentroResultado.text"></label>
                                    <input type="text" class="form-control" data-bind="value: DataFinalVinculoCentroResultado.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalVinculoCentroResultado.maxlength, id : DataFinalVinculoCentroResultado.id}" />
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: TipoRelatorio.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: TipoRelatorio.text, attr: { for: TipoRelatorio.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: TipoRelatorio.requiredClass, value: TipoRelatorio.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoRelatorio.maxlength, id : TipoRelatorio.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoRelatorio.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>  
                </form>
                <div class="row mb-3">
                    <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                            <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                        </button>
                    </div>
                    <div id="knockoutCRUDFiltrosPesquisaMotorista" class="col-12 col-md-6 d-flex justify-content-md-end">
                        <div>
                            <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                                <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="divConfigRelatorio"></div>
                <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>
                <div id="knockoutCRUDPesquisaMotorista" class="d-flex justify-content-center justify-content-md-end mt-3">
                    <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                        <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                    </button>
                    <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                        <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/relatorios/scripts/relatorioHistoricoMotoristaCentro"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        LoadMotorista();
    });

</script>
