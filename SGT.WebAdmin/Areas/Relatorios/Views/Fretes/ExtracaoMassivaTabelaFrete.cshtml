@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Fretes</li>
    <li class="breadcrumb-item active">Extração Massiva</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-truck"></i> Extração Massiva de Tabelas de Frete
    </h1>
</div>
<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-search"></i>
                Consulta
            </h3>
        </div>
        <div class="panel-content">
            <div id="knockoutPesquisaConsultaTabelaFrete">
                <form>

                    <div class="row">

                        <div class="col-12 col-md-6" data-bind="visible: TabelaFrete.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TabelaFrete.text, attr: { for: TabelaFrete.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: TabelaFrete.requiredClass, value: TabelaFrete.val, valueUpdate: 'afterkeydown', attr: { maxlength: TabelaFrete.maxlength, id : TabelaFrete.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TabelaFrete.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-3" data-bind="visible: DataInicialAlteracao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataInicialAlteracao.text, attr: { for: DataInicialAlteracao.id }"></label>
                                <input type="text" class="form-control" data-bind="class: DataInicialAlteracao.requiredClass, value: DataInicialAlteracao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicialAlteracao.maxlength, id : DataInicialAlteracao.id}" />
                            </div>
                        </div>

                        <div class="col-12 col-md-3" data-bind="visible: DataFinalAlteracao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataFinalAlteracao.text, attr: { for: DataFinalAlteracao.id }"></label>
                                <input type="text" class="form-control" data-bind="class: DataFinalAlteracao.requiredClass, value: DataFinalAlteracao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalAlteracao.maxlength, id : DataFinalAlteracao.id}" />
                            </div>
                        </div>


                    </div>

                    <div class="row" data-bind="id: ConfiguracaoRelatorio.idFade, fadeVisible: ConfiguracaoRelatorio.visibleFade">
                        <div id="divConfigRelatorio">

                        </div>
                    </div>
                </form>

                <div class="row mb-3">
                    <div class="col-12 d-flex justify-content-end">
                        <button class="btn btn-default btnPesquisarFiltroPesquisa me-3" data-bind="click: ConfiguracaoRelatorio.eventClick, attr: { id: ConfiguracaoRelatorio.id}" type="button">
                            <i data-bind="css: ConfiguracaoRelatorio.icon"></i><span data-bind="text: ConfiguracaoRelatorio.text"></span>
                        </button>
                        <button class="btn btn-default btnPesquisarFiltroPesquisa me-3 " data-bind="click: LimparFiltros.eventClick, attr: { id: LimparFiltros.id}" type="button">
                            <i class="fal fa-recycle"></i><span data-bind="text: LimparFiltros.text"></span>
                        </button>
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                        </button>
                    </div>
                </div>
                <div id="divGridConsultaTabelaFrete">
                    <table class="table table-bordered table-hover dataTable no-footer" data-bind="attr: { id: Preview.idGrid}" width="100%" cellspacing="0"></table>
                </div>
            </div>

            <div id="knockoutCRUDPesquisaConsultaTabelaFrete" class="d-flex justify-content-center justify-content-md-end mt-3">
                <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                    <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                </button>
                <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                    <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                </button>
            </div>
        </div>
    </div>
</div>


<script src="~/scripts/extracaoMassivaTabelaFrete"></script>

<style type="text/css">
    .spnTipoValorItem {
        cursor: pointer;
    }
</style>

<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadExtracaoMassivaTabelaFrete();
    });

</script>
