@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Gestão Pátio</li>
    <li class="breadcrumb-item">Relatórios</li>
    <li class="breadcrumb-item active">Controle Visita</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        Relatório de Checklist
    </h1>
</div>
<div class="panel" id="divConteudoRelatorio">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                Pesquisar Checklists
            </h3>
        </div>
        <div class="panel-content">
            <form id="knockoutPesquisaControleVisita">
                <div class="row">
                    <div class="col-12 col-md-3" data-bind="visible: DataInicialEntrada.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataInicialEntrada.text, attr: { for: DataInicialEntrada.id }"></label>
                            <input type="text" class="form-control" data-bind="class: DataInicialEntrada.requiredClass, value: DataInicialEntrada.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicialEntrada.maxlength, id : DataInicialEntrada.id}" />
                        </div>
                    </div>

                    <div class="col-12 col-md-3" data-bind="visible: DataFinalEntrada.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataFinalEntrada.text, attr: { for: DataFinalEntrada.id }"></label>
                            <input type="text" class="form-control" data-bind="class: DataFinalEntrada.requiredClass, value: DataFinalEntrada.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalEntrada.maxlength, id : DataFinalEntrada.id}" />
                        </div>
                    </div>

                    <div class="col-12 col-md-3" data-bind="visible: DataInicialSaida.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataInicialSaida.text, attr: { for: DataInicialSaida.id }"></label>
                            <input type="text" class="form-control" data-bind="class: DataInicialSaida.requiredClass, value: DataInicialSaida.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicialSaida.maxlength, id : DataInicialSaida.id}" />
                        </div>
                    </div>

                    <div class="col-12 col-md-3" data-bind="visible: DataFinalSaida.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataFinalSaida.text, attr: { for: DataFinalSaida.id }"></label>
                            <input type="text" class="form-control" data-bind="class: DataFinalSaida.requiredClass, value: DataFinalSaida.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalSaida.maxlength, id : DataFinalSaida.id}" />
                        </div>
                    </div>

                    <div class="col-12 col-md-4" data-bind="visible: Setor.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Setor.text, attr: { for: Setor.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Setor.requiredClass, value: Setor.val, valueUpdate: 'afterkeydown', attr: { maxlength: Setor.maxlength, id : Setor.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Setor.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-md-4" data-bind="visible: Autorizador.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: Autorizador.text, attr: { for: Autorizador.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="css: Autorizador.requiredClass, value: Autorizador.val, valueUpdate: 'afterkeydown', attr: { maxlength: Autorizador.maxlength, id : Autorizador.id}" />
                                <div class="input-group-append">
                                    <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Autorizador.idBtnSearch}" type="button" aria-label="Buscar">
                                        <i class="fal fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                                        
                    <div class="col-12 col-md-4" data-bind="visible: CPF.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: CPF.text, attr: { for: CPF.id }"></label>
                            <input type="text" class="form-control" data-bind="class: CPF.requiredClass, value: CPF.val, valueUpdate: 'afterkeydown', attr: { maxlength: CPF.maxlength, id : CPF.id}" />
                        </div>
                    </div>
                </div>

            </form>
            <div class="row mb-3">
                <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                        <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                    </button>
                </div>
                <div id="knockoutCRUDFiltrosPesquisaControleVisita" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                        <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                    </button>
                </div>
            </div>

            <div id="divConfigRelatorio" class="mt-3"></div>

            <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>

            <div id="knockoutCRUDPesquisaControleVisita" class="d-flex justify-content-center justify-content-md-end mt-3">
                <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                    <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                </button>
                <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                    <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/relatorios/scripts/controleVisita"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRelatorioControleVisita();
    });

</script>