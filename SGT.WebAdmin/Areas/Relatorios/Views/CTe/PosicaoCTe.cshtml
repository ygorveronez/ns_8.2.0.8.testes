@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Relatórios</li>
    <li class="breadcrumb-item">CTe</li>
    <li class="breadcrumb-item active">Posição CTE</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class=""></i> Relatório de Posição de CT-es a Faturar
    </h1>
</div>

<div id="divConteudoRelatorio" class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-file-alt"></i>
                Relatórios
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div id="knockoutPesquisaPosicaoCTe">
                    <div class="row">
                        <div class="col-12 col-md-2" data-bind="visible: DataPosicao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataPosicao.text"></label>
                                <input type="text" class="form-control" data-bind="css:DataPosicao.requiredClass,value: DataPosicao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataPosicao.maxlength, id : DataPosicao.id}" />
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: Transportadora.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Transportadora.text, attr: { for: Transportadora.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: Transportadora.requiredClass, value: Transportadora.val, valueUpdate: 'afterkeydown', attr: { maxlength: Transportadora.maxlength, id : Transportadora.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Transportadora.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-2" data-bind="visible: StatusCTe.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: StatusCTe.text, attr: { for: StatusCTe.id }"></label>
                                <select class="form-control" data-bind="options: StatusCTe.options, optionsText: 'text', optionsValue: 'value', value: StatusCTe.val, attr: { id : StatusCTe.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: TipoRelatorio.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TipoRelatorio.text, attr: { for: TipoRelatorio.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: TipoRelatorio.requiredClass, value: TipoRelatorio.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoRelatorio.maxlength, id : TipoRelatorio.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: TipoRelatorio.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: SomenteCTesFaturados.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: SomenteCTesFaturados.val, attr: { maxlength: SomenteCTesFaturados.maxlength, name: SomenteCTesFaturados.id, id: SomenteCTesFaturados.id }">
                                    <label class="custom-control-label" data-bind="text: SomenteCTesFaturados.text, attr: { for: SomenteCTesFaturados.id }"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: SomenteAvon.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: SomenteAvon.val, attr: { maxlength: SomenteAvon.maxlength, name: SomenteAvon.id, id: SomenteAvon.id }">
                                    <label class="custom-control-label" data-bind="text: SomenteAvon.text, attr: { for: SomenteAvon.id }"></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-4" data-bind="visible: SomenteDiaInformado.visible">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" data-bind="checked: SomenteDiaInformado.val, attr: { maxlength: SomenteDiaInformado.maxlength, name: SomenteDiaInformado.id, id: SomenteDiaInformado.id }">
                                    <label class="custom-control-label" data-bind="text: SomenteDiaInformado.text, attr: { for: SomenteDiaInformado.id }"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row mb-3 mt-3">
                <!-- CRUD Configurações -->
                <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                        <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                    </button>
                </div>
                <!-- CRUD Filtro de Pesquisa -->
                <div id="knockoutCRUDFiltrosPesquisaFaturamento" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                        <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                    </button>
                </div>
            </div>
            <!-- Configurações do Relatório -->
            <div id="divConfigRelatorio">
            </div>
            <!-- GRID de Resultados -->
            <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>
            <!-- Botões Inferiores-->
            <div id="knockoutCRUDPesquisaPosicaoCTe" class="d-flex justify-content-center justify-content-md-end mt-3">
                <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                    <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                </button>
                <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                    <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/relatorios/scripts/posicaoCTe"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRelatorioPosicaoCTe();
    });

</script>

