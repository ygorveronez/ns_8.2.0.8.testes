@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Relatorios</li>
    <li class="breadcrumb-item">CTe</li>
    <li class="breadcrumb-item active">Comparativo Mensal de Faturamento de CT-es por Grupo de Pessoas</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        Relatório Comparativo Mensal de Faturamento de CT-es por Grupo de Pessoas
    </h1>
</div>

<div>
    <div class="panel">
        <div class="panel-container">
            <div class="panel-content">
                <form>
                    <div class="row" id="knockoutPesquisaComparativoMensalFaturamentoGrupoPessoas">
                        <div class="col-12 col-md-3" data-bind="visible: DataInicialEmissao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataInicialEmissao.text, attr: { for: DataInicialEmissao.id }"></label>
                                <input type="text" class="form-control" data-bind="value: DataInicialEmissao.val, valueUpdate: 'afterkeydown' , attr: { maxlength: DataInicialEmissao.maxlength, id : DataInicialEmissao.id}" />
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: DataFinalEmissao.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataFinalEmissao.text, attr: { for: DataFinalEmissao.id }"></label>
                                <input type="text" class="form-control" data-bind="value: DataFinalEmissao.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinalEmissao.maxlength, id : DataFinalEmissao.id}" />
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: QuantidadeMesesAnteriores.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: QuantidadeMesesAnteriores.text, attr: { for: QuantidadeMesesAnteriores.id }"></label>
                                <select class="form-control" data-bind="options: QuantidadeMesesAnteriores.options, optionsText: 'text', optionsValue: 'value', value: QuantidadeMesesAnteriores.val, attr: { id : QuantidadeMesesAnteriores.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: PropriedadeVeiculo.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: PropriedadeVeiculo.text, attr: { for: PropriedadeVeiculo.id }"></label>
                                <select class="form-control" data-bind="options: PropriedadeVeiculo.options, optionsText: 'text', optionsValue: 'value', value: PropriedadeVeiculo.val, attr: { id : PropriedadeVeiculo.id}"></select>
                            </div>
                        </div>
                        <div class="col-12 col-md-3" data-bind="visible: GruposPessoas.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: GruposPessoas.text, attr: { for: GruposPessoas.id }"></label>
                                <select class="form-control" data-bind="options: GruposPessoas.options, optionsText: 'text', optionsValue: 'value', selectedOptions: GruposPessoas.val, attr: { id : GruposPessoas.id}" multiple="multiple" title="Todos"></select>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center justify-content-md-end mt-3">
                            <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                                <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                            </button>
                            <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                                <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/relatorios/scripts/comparativoMensalFaturamentoGrupoPessoas"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRelatorioComparativoMensalFaturamentoGrupoPessoas();
    });

</script>

