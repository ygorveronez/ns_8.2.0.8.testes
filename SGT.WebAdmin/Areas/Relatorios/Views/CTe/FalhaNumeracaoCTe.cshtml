@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Relatórios</li>
    <li class="breadcrumb-item">CTe</li>
    <li class="breadcrumb-item active">Falha Numeração CTe</li>
</ol>

<div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-truck"></i> Relatório Falha de Númeração de CT-e
    </h1>
</div>

<div class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-file-alt"></i>
                Relatórios
            </h3>
        </div>
        <div class="panel-content">
            <form id="knockoutFalhaNumeracao">
                <div class="row">
                    <div class="col-12 col-md-2" data-bind="visible: DataInicial.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataInicial.text, attr: { for: DataInicial.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="class: DataInicial.requiredClass, value: DataInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicial.maxlength, id : DataInicial.id}">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-2" data-bind="visible: DataFinal.visible">
                        <div class="form-group">
                            <label class="form-label" data-bind="text: DataFinal.text, attr: { for: DataFinal.id }"></label>
                            <div class="input-group">
                                <input type="text" class="form-control" data-bind="class: DataFinal.requiredClass, value: DataFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinal.maxlength, id : DataFinal.id}">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row mb-3 mt-3 d-flex justify-content-end">
                <!-- CRUD Filtro de Pesquisa -->
                <div id="knockoutCRUDFiltrosPesquisaCTe" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" id="btnGerarRelatorio" type="button">
                        <span>Gerar Relatório</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    pageSetUp();

    var _relatorioFalhaNumeracaoCTe;
    var RelatorioFalhaNumeracaoCTeModel = function () {
        let dataAtual = Global.DataAtual();

        this.DataInicial = PropertyEntity({ text: "Data Inicial:", getType: typesKnockout.date, val: ko.observable(dataAtual), def: dataAtual });
        this.DataFinal = PropertyEntity({ text: "Data Final:", getType: typesKnockout.date, val: ko.observable(dataAtual), def: dataAtual });
    };

    $(document).ready(function () {

        _relatorioFalhaNumeracaoCTe = new RelatorioFalhaNumeracaoCTeModel();
        KoBindings(_relatorioFalhaNumeracaoCTe, "knockoutFalhaNumeracao");

        $("#btnGerarRelatorio").click(function () {
            executarDownload("Relatorios/FalhaNumeracaoCTe/Download", { DataInicial: _relatorioFalhaNumeracaoCTe.DataInicial.val(), DataFinal: _relatorioFalhaNumeracaoCTe.DataFinal.val() });
        });
    });

</script>
