@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<section id="widget-grid" class="">
    <ol class="breadcrumb page-breadcrumb">
        <li class="breadcrumb-item">Relatórios</li>
        <li class="breadcrumb-item">Seguros</li>
        <li class="breadcrumb-item active">Apólices</li>
    </ol>
    <div class="subheader">
        <h1 class="subheader-title">
            Relatório de Apólices
        </h1>
        <div class="subheader-help">
            <button type="button" onclick="iniciarAjuda(863)" data-action="toggle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Abrir a ajuda da página" aria-label="Abrir a ajuda da página"><i class="fal fa-question-circle"></i></button>
        </div>

    </div>
    <div id="divConteudoRelatorio" class="panel">
        <div class="panel-container">
            <div class="panel-hdr">
                <h3>
                    <i class="fal fa-file-alt"></i>
                    Relatórios
                </h3>
            </div>
            <div class="panel-content">
                <form>
                    <div id="knockoutPesquisaApolices">
                        <div class="row">
                            <div class="col-12 col-md-4" data-bind="visible: Seguradora.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Seguradora.text, attr: { for: Seguradora.id }"></label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" data-bind="css: Seguradora.requiredClass, value: Seguradora.val, valueUpdate: 'afterkeydown', attr: { maxlength: Seguradora.maxlength, id : Seguradora.id}" />
                                        <div class="input-group-append">
                                            <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Seguradora.idBtnSearch}" type="button" aria-label="Buscar">
                                                <i class="fal fa-search"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Responsavel.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Responsavel.text, attr: { for: Responsavel.id }"></label>
                                    <select class="form-control" data-bind="class: Responsavel.requiredClass, options: Responsavel.options, optionsText: 'text', optionsValue: 'value', value: Responsavel.val, attr: { maxlength: Responsavel.maxlength, id : Responsavel.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-4" data-bind="visible: Averbadora.visible">
                                <div class="form-group">
                                    <label class="form-label" data-bind="text: Averbadora.text, attr: { for: Averbadora.id }"></label>
                                    <select class="form-control" data-bind="class: Averbadora.requiredClass, options: Averbadora.options, optionsText: 'text', optionsValue: 'value', value: Averbadora.val, attr: { maxlength: Averbadora.maxlength, id : Averbadora.id}"></select>
                                </div>
                            </div>
                            <div class="col-12 col-md-12" data-bind="visible: EmVigencia.visible">
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" data-bind="checked: EmVigencia.val, attr: { maxlength: EmVigencia.maxlength, name: EmVigencia.id, id: EmVigencia.id }">
                                        <label class="custom-control-label" data-bind="text: EmVigencia.text, attr: { for: EmVigencia.id }"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
                <div class="row mb-3">
                    <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                            <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                        </button>
                    </div>
                    <div id="knockoutCRUDFiltrosPesquisaApolices" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">
                       
                        <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                            <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                        </button>
                    </div>
                </div>
                <div id="divConfigRelatorio"></div>
                <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>
                <div id="knockoutCRUDPesquisaApolices" class="d-flex justify-content-center justify-content-md-end mt-3">
                    <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                        <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                    </button>
                    <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                        <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/relatorios/scripts/apolices"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRelatorioApolices();
    });

</script>
