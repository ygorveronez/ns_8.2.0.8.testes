@inherits Microsoft.AspNetCore.Mvc.Razor.RazorPage

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item">Relatórios</li>
    <li class="breadcrumb-item">Logística</li>
    <li class="breadcrumb-item active">Consolidação Gás</li>
</ol>
<div class="subheader">
    <h1 class="subheader-title">
        <i class="subheader-icon fal fa-truck"></i> Relatório de Solicitações de Consolidações de Gás
    </h1>
</div>
<div id="divConteudoRelatorio" class="panel">
    <div class="panel-container">
        <div class="panel-hdr">
            <h3>
                <i class="fal fa-file-alt"></i>
                Relatório
            </h3>
        </div>
        <div class="panel-content">
            <form>
                <div id="knockoutPesquisaConsolidacaoGas">
                    <div class="row">

                        <div class="col-12 col-md-2" data-bind="visible: DataInicial.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataInicial.text, attr: { for: DataInicial.id }"></label>
                                <input type="text" class="form-control" data-bind="class: DataInicial.requiredClass, value: DataInicial.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataInicial.maxlength, id : DataInicial.id}" />
                            </div>
                        </div>

                        <div class="col-12 col-md-2" data-bind="visible: DataFinal.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DataFinal.text, attr: { for: DataFinal.id }"></label>
                                <input type="text" class="form-control" data-bind="class: DataFinal.requiredClass, value: DataFinal.val, valueUpdate: 'afterkeydown', attr: { maxlength: DataFinal.maxlength, id : DataFinal.id}" />
                            </div>
                        </div>

                        <div class="col-12 col-md-2" data-bind="visible: TipoFilial.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: TipoFilial.text, attr: { for: TipoFilial.id }"></label>
                                <input type="text" class="form-control" data-bind="class: TipoFilial.requiredClass, value: TipoFilial.val, valueUpdate: 'afterkeydown', attr: { maxlength: TipoFilial.maxlength, id : TipoFilial.id}" />
                            </div>
                        </div>

                        <div class="col-12 col-md-6" data-bind="visible: Base.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: Base.text, attr: { for: Base.id }"></label>
                                <div class="input-group">
                                    <input type="text" class="form-control" data-bind="css: Base.requiredClass, value: Base.val, valueUpdate: 'afterkeydown', attr: { maxlength: Base.maxlength, id : Base.id}" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary waves-effect waves-themed" data-bind="attr: { id: Base.idBtnSearch}" type="button" aria-label="Buscar">
                                            <i class="fal fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-md-4" data-bind="visible: DisponibilidadeTransferencia.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: DisponibilidadeTransferencia.text, attr: { for: DisponibilidadeTransferencia.id }"></label>
                                <select class="form-control" data-bind="class: DisponibilidadeTransferencia.requiredClass, options: DisponibilidadeTransferencia.options, optionsText: 'text', optionsValue: 'value', value: DisponibilidadeTransferencia.val, attr: { maxlength: DisponibilidadeTransferencia.maxlength, id : DisponibilidadeTransferencia.id}"></select>
                            </div>
                        </div>

                        <div class="col-12 col-md-4" data-bind="visible: VolumeRodoviario.visible">
                            <div class="form-group">
                                <label class="form-label" data-bind="text: VolumeRodoviario.text, attr: { for: VolumeRodoviario.id }"></label>
                                <select class="form-control" data-bind="class: VolumeRodoviario.requiredClass, options: VolumeRodoviario.options, optionsText: 'text', optionsValue: 'value', value: VolumeRodoviario.val, attr: { maxlength: VolumeRodoviario.maxlength, id : VolumeRodoviario.id}"></select>
                            </div>
                        </div>
                    </div>
                </div>


            </form>
            <div class="row mb-3">
                <div id="knockoutCRUDConfiguracaoRelatorio" class="col-12 col-md-6 mb-3 mb-md-0">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="enable: ExibirConfiguracoes.enable, click: ExibirConfiguracoes.eventClick, attr: { id: ExibirConfiguracoes.id}" type="button">
                        <i data-bind="css: ExibirConfiguracoes.icon"></i><span data-bind="text: ExibirConfiguracoes.text"></span>
                    </button>
                </div>
                <div id="knockoutCRUDFiltrosPesquisaConsolidacaoGas" class="col-12 col-md-6 d-flex justify-content-center justify-content-md-end">
                    <button class="btn btn-primary btnPesquisarFiltroPesquisa" data-bind="click: Preview.eventClick, attr: { id: Preview.id}" type="button">
                        <i class="fal fa-search"></i><span data-bind="text: Preview.text"></span>
                    </button>

                </div>
            </div>

            <div id="divConfigRelatorio"></div>

            <table id="gridPreviewRelatorio" class="table table-bordered table-hover table-condensed table-striped" width="100%" cellspacing="0"></table>

            <div id="knockoutCRUDPesquisaConsolidacaoGas" class="d-flex justify-content-center justify-content-md-end mt-3">
                <button class="btn btn-success me-3" data-bind="click: GerarRelatorioExcel.eventClick, attr: { id: GerarRelatorioExcel.id}" type="button">
                    <i class="fal fa-file-excel"></i><span data-bind="text: GerarRelatorioExcel.text"></span>
                </button>
                <button class="btn btn-success" data-bind="click: GerarRelatorioPDF.eventClick, attr: { id: GerarRelatorioPDF.id}" type="button">
                    <i class="fal fa-file-pdf"></i><span data-bind="text: GerarRelatorioPDF.text"></span>
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/relatorios/scripts/consolidacaoGas"></script>
<script type="text/javascript">

    pageSetUp();

    $(document).ready(function () {
        loadRelatorioConsolidacaoGas();
    });

</script>
