<Window x:Class="SGT.GerenciadorApp.Configuracoes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGT.GerenciadorApp"
        mc:Ignorable="d"
        Title="Configurações" Height="500" Width="600" ResizeMode="NoResize">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ConfiguracaoEBSModel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Dias Retroativos:" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,5,0" />
                <TextBox  Grid.Column="0" Grid.Row="1" Text="{Binding DiasRetroativos}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,5,0" />

                <TextBlock Grid.Column="1" Grid.Row="0"  Text="Hora de Execução:" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding HoraExecucao}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <TextBlock Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Text="Caminho para salvar o arquivo:" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <TextBox  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Text="{Binding CaminhoSalvarArquivos}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <TextBlock Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Text="E-mails para envio do arquivo:" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <TextBox Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Text="{Binding EmailsEnvioArquivos}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

            </Grid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ConfiguracaoEBSViewModel}">
            <DockPanel Margin="5">
                <DockPanel DockPanel.Dock="Bottom">
                    <Button Content=" >> MIGRAR DADOS" Margin="60,2" DockPanel.Dock="Right" VerticalAlignment="Bottom"
                            Command="{Binding Path=MigrarDadosCommand}" Width="150" />
                    <Button Content="Salvar Configuração" DockPanel.Dock="Left" VerticalAlignment="Bottom"
                            Command="{Binding Path=SaveConfiguracaoEBSCommand}" Width="150" />
                </DockPanel>
                <ContentControl Margin="10" Content="{Binding Path=AtualConfiguracaoEBS}" />
            </DockPanel>
        </DataTemplate>
        
    </Window.Resources>
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabStripPlacement="Top" Margin="5">
            <TabItem Header="EBS">
                <ContentControl Content="{Binding }" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
            </TabItem>
        </TabControl>
    </Grid>

</Window>
